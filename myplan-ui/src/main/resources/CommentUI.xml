    <bean id="Message-FormView" parent="MyPlanBaseFormView">
        <property name="id" value="Message-FormView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="applyDirtyCheck" value="false"/>
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-600</value>
                <value>myplan-view</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="message_dialog_response_page" p:headerText="Leave a Message to @{studentName}.">
                    <property name="header">
                        <bean parent="Uif-HeaderFour"/>
                    </property>
                    <property name="layoutManager">
                        <bean parent="Uif-VerticalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="message_dialog_subject"/>
                            <ref bean="message_dialog_message"/>
                            <ref bean="message_actions"/>
                        </list>
                    </property>
                </bean>
                <!--Comment Page-->
                <bean parent="Uif-Page" p:id="comment_dialog_response_page" p:headerText="View Message">
                    <property name="header">
                        <bean parent="Uif-HeaderFour"/>
                    </property>
                    <property name="layoutManager">
                        <bean parent="Uif-VerticalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="comment_dialog_subject"/>
                            <bean parent="Uif-MessageField"
                                  p:cssClasses="fl-font-size-90 fl-text-bold">
                                <property name="message">
                                    <bean parent="Uif-Message" p:messageText="Post your comment to this message"/>
                                </property>
                            </bean>
                            <ref bean="comment_dialog_message"/>
                            <ref bean="comment_dialog_comments_list"/>
                            <bean id="postCommentButton" p:id="postCommentButton" parent="Uif-PrimaryActionButton"
                                  p:actionLabel="Post a Comment" p:methodToCall="addComment">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>myplan-button</value>
                                        <value>myplan-button-blue</value>
                                        <value>fl-font-size-90</value>
                                    </list>
                                </property>
                            </bean>
                            <bean id="hidden_messageId" parent="Uif-InputField" p:propertyName="messageId"
                                  p:defaultValue="@{messageId}">
                                <property name="control">
                                    <bean parent="Uif-HiddenControl"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.comment.form.CommentForm"/>
    </bean>

    <bean id="comment_dialog_subject" parent="Uif-VerticalBoxSubSection" p:style="background: #EEE;">
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:cssClasses="fl-font-size-90 fl-text-gray"
                      p:messageText="From @{from} on @{createdDate}"/>
                <bean parent="Uif-MessageField"
                      p:cssClasses="fl-font-size-120 fl-text-bold">
                    <property name="message">
                        <bean parent="Uif-Message" p:messageText="Adviser feedback on your plan"/>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:propertyName="subject">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-data-list</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="comment_dialog_comments_list" parent="Uif-ListCollectionSection" p:headerText="@{comments.size()} comments to this message were posted">
        <property name="header">
            <bean parent="Uif-HeaderSix"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-saved-courses-summary</value>
            </list>
        </property>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.comment.dataobject.CommentDataObject"/>
        <property name="propertyName" value="comments"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.render="false" >
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-MessageField" p:messageText="@{#line.from}">
                                            <property name="style" value="margin-right:0.4em;"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-bold</value>
                                                </list>
                                            </property>
                                        </bean>

                                       <bean parent="Uif-DataField" p:propertyName="createDate">
                                            <property name="style" value="margin-right:0.4em;"/>
                                           <property name="propertyEditor" ref="timestamp_formatter"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-bold</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-Message" p:messageText="@{#line.body}"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="comment_dialog_message" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>

                <bean parent="Uif-MessageField"
                      p:cssClasses="fl-font-size-90">
                    <property name="message">
                        <bean parent="Uif-Message" p:messageText="David S."/>
                    </property>
                </bean>
                <bean id="commenting_textbox" parent="Uif-InputField" p:propertyName="body"
                      p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="4" p:cols="70" p:textExpand="false"
                              p:watermarkText="Maximum characters are 500"/>

                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="message_dialog_subject" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField"
                      p:cssClasses="fl-font-size-90">
                    <property name="message">
                        <bean parent="Uif-Message" p:messageText="Subject"/>
                    </property>
                </bean>
                <bean id="subject_textbox" parent="Uif-InputField" p:propertyName="subject"
                      p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="70" p:watermarkText="Maximum characters are 70"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="message_dialog_message" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField"
                      p:cssClasses="fl-font-size-90">
                    <property name="message">
                        <bean parent="Uif-Message" p:messageText="Message"/>
                    </property>
                </bean>
                <bean id="message_textbox" parent="Uif-InputField" p:propertyName="body"
                      p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="10" p:cols="70" p:textExpand="false"
                              p:watermarkText="Maximum characters are 1000"/>

                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="message_actions" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean id="leaveMessageButton" p:id="leaveMessageButton" parent="Uif-PrimaryActionButton"
                      p:actionLabel="Leave a Message" p:methodToCall="addMessage">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-button</value>
                            <value>myplan-button-blue</value>
                            <value>fl-font-size-90</value>
                        </list>
                    </property>
                </bean>
                <bean p:id="cancelMessage" parent="Uif-PrimaryActionButton" p:actionLabel="Cancel">
                    <property name="clientSideJs"
                              value="fnCloseAllPopups();"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-button</value>
                            <value>myplan-button-transparent</value>
                            <value>fl-font-size-90</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--  Messages Summary (Gutter) Lookup -->
    <bean id="MessagesSummary-LookupView" parent="MyPlanBaseLookupView">
        <property name="headerText" value="Messages Summary"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="page.header.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.comment.dataobject.MessageDataObject"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.comment.service.MessagesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-section</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="Uif-VerticalBoxGroup"/>
        </property>
        <property name="resultsGroup">
            <bean id="messages_summary" parent="messages_summary_list"/>
        </property>
    </bean>

    <bean id="messages_summary_list" parent="Uif-ListCollectionSection" p:headerText="MESSAGES (@{searchResults.size()})" p:style="margin-bottom: 10px;">
        <property name="header">
            <bean parent="Uif-HeaderFive" p:style="background: #ccc;"/>
        </property>
        <!--<property name="header">
            <bean id="messsage_header" parent="Uif-ViewHeader">
                <property name="items">
                    <bean parent="Uif-Link" p:linkText="Leave a Message">
                        <property name="href"
                                  value="comment?methodToCall=startCommentForm&amp;viewId=Message-FormView&amp;pageId=message_dialog_response_page"/>
                        <property name="lightBox">
                            <bean parent="Uif-LightBox"/>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>-->
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-widget</value>
                <value>myplan-messages-summary</value>
                <value>myplan-stacked-list</value>
            </list>
        </property>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.comment.dataobject.MessageDataObject"/>
        <property name="propertyName" value="searchResults"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="filters">
            <list>
                <bean parent="Uif-ConditionalCollectionFilter" p:expression="#index lt 3"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:style="cursor:pointer;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalFieldGroup" p:style="width:190px; margin:0 10px 0 0;">
                                <property name="items">
                                    <list>
                                       <!-- <bean parent="Uif-Link" p:linkText="comment">
                                            <property name="href"
                                                      value="comment?methodToCall=startCommentForm&amp;viewId=Message-FormView&amp;pageId=comment_dialog_response_page&amp;messageId=@{#line.messageId}"/>
                                            <property name="lightBox">
                                                <bean parent="Uif-LightBox"/>
                                            </property>
                                        </bean>-->
                                        <bean parent="Uif-MessageField" p:messageText="@{#line.subject}" p:style="width:190px;">
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-bold</value>
                                                    <value>myplan-text-ellipsis</value>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-HorizontalFieldGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-MessageField" p:messageText="@{#line.from}" p:label="from"
                                                          p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal fl-text-gray">
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-text-gray</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-MessageField" p:messageText="@{#line.comments.size()}" p:render="@{#line.comments.size() gt 0}">
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-text-bold</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalFieldGroup" p:style="width:100px; margin:0;">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="createDate" p:label="Posted" p:labelPlacement="TOP"
                                              p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal fl-font-size-90" p:fieldLabel.style="visibility: hidden;"
                                              p:render="@{#line.comments.size() eq 0}">
                                            <property name="propertyEditor" ref="timestamp_formatter"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-gray</value>
                                                    <value>fl-font-size-90</value>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-DataField" p:propertyName="lastCommentDate" p:label="Last Comment" p:labelPlacement="TOP"
                                              p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal fl-font-size-90"
                                              p:render="@{#line.comments.size() gt 0}">
                                            <property name="propertyEditor" ref="timestamp_formatter"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-gray</value>
                                                    <value>fl-font-size-90</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                                <!--<property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="#line.comments.size() gt 0">
                                            <property name="replacement">
                                                <list>
                                                    <bean parent="Uif-DataField" p:propertyName="createDate" p:label="Last Comment"
                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal">
                                                        <property name="propertyEditor" ref="timestamp_formatter"/>
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-text-gray</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>-->
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <bean parent="messages_summary_footer"/>
        </property>
    </bean>

    <bean id="messages_summary_footer" parent="Uif-VerticalBoxSection" p:header.render="false" p:style="padding: 6px 4px;">
        <property name="items">
            <list>
                <bean parent="Uif-Link">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-text-align-right</value>
                        </list>
                    </property>
                    <property name="linkText"
                              value="View @{(searchResults eq null or searchResults.size() lt 2) ? 'message' : 'all '+searchResults.size()+' messages'}"/>
                    <property name="title"
                              value="View @{(searchResults eq null or searchResults.size() lt 2) ? 'message' : 'all '+searchResults.size()+' messages'}"/>
                    <property name="href"
                              value="lookup?methodToCall=search&amp;viewId=MessagesDetail-LookupView"/>
                    <property name="render"
                              value="@{searchResults ne null and searchResults.size() gt 0 ? true : false}"/>
                    <property name="target" value=""/>
                </bean>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="render"
                              value="@{searchResults ne null and searchResults.size() gt 0 ? false : true}"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-text-align-center</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message"
                                  p:messageText="You don't have any messages."/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="MessagesDetail-LookupView" parent="MyPlanLookupView">
        <property name="viewName" value="MessagesDetail-LookupView"/>
        <property name="headerText" value="Messages Summary"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="page.header.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.comment.dataobject.MessageDataObject"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.comment.service.MessagesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-LookupPage" p:id="messages_detail_page" p:headerText="Messages &amp; Comments">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="messages_detail"/>
                            <ref bean="saved_course_myplan_section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>
    </bean>

    <bean id="messages_detail" parent="Uif-VerticalBoxSubSection" p:style="width: 710px; margin-right: 10px;">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-messages-detail</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="messages_detail_list"/>
            </list>
        </property>
    </bean>
    <bean id="messages_detail_list" parent="Uif-ListCollectionSection">
    <!--<bean id="messages_detail_list" parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="4">-->
        <property name="headerText" value="You have @{searchResults.size()} messages"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.comment.dataobject.MessageDataObject"/>
        <property name="propertyName" value="searchResults"/>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:propertyName="subject" p:label="Subject">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-font-bold</value>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-DataField" p:propertyName="createDate" p:label="Received">
                    <property name="propertyEditor" ref="timestamp_formatter"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-text-gray</value>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-MessageField" p:messageText="@{#line.comments.size()} comments" p:label="Comments" p:render="true"/>

                <bean parent="Uif-MessageField" p:messageText="--" p:label="Last Comment" p:render="@{#line.comments.size() eq 0}"/>

                <bean parent="Uif-DataField" p:propertyName="lastCommentDate" p:label="Last Comment">
                    <property name="render" value="@{#line.comments.size() gt 0}"/>
                    <property name="propertyEditor" ref="timestamp_formatter"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-text-gray</value>
                        </list>
                    </property>
                </bean>



            </list>
        </property>
    </bean>

</beans>
