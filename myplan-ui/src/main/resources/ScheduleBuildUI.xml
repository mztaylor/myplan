    <bean id="sb_reserved_time_template" parent="sb_reserved_time_template-parent"/>
    <bean id="sb_reserved_time_template-parent" abstract="true" parent="KSAP-VerticalBoxGroup" p:hidden="true">
        <property name="items">
            <list>
                <bean parent="KSAP-HorizontalBoxGroup" p:id="sb-reserved-time-row-__KSAP_UID__"
                      p:additionalCssClasses="ksap-sb-reserved-time-row,ksap-sb-deselected">
                    <property name="dataAttributes">
                        <map merge="true">
