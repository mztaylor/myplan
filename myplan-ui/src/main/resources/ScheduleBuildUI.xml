    <bean id="sb_course_options" parent="sb_course_options-parent"/>
    <bean id="sb_course_options-parent" parent="Uif-ListCollectionSection" p:id="sb_course_options">
        <property name="validationMessages">
            <null/>
        </property>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.schedulebuilder.infc.CourseOption"/>
        <property name="propertyName" value="courseOptions"/>
        <property name="header.render" value="false"/>
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-List"/>
        </property>
        <property name="items">
            <list>
                <bean parent="KSAP-VerticalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="KSAP-HorizontalBoxGroup" p:id="sb-course-option-row-@{#line.uniqueId}"
                                  p:additionalCssClasses="ksap-sb-course-row,ksap-sb-@{#line.selected?'selected':'deselected'}">
                                <property name="items">
                                    <list>
                                        <bean parent="sb_option_control-parent" p:propertyName="selected"
                                              p:id="sb-course-option-select-@{#line.uniqueId}"
                                              p:control.render="@{#line.getActivityCount(includeClosed) gt 0 and !#line.lockedIn}"
                                              p:additionalCssClasses="ksap-sb-course-select"
                                              p:onChangeScript="toggleCourseOptionSelect('@{#line.uniqueId}')"/>
                                        <bean parent="KSAP-VerticalFieldGroup"
                                              p:onClickScript="toggleCourseOption('@{#line.uniqueId}')">
                                            <property name="items">
                                                <list>
                                                    <bean parent="KSAP-Message" p:messageText="@{#line.courseCode}"
                                                          p:title="@{#line.courseTitle}"
                                                          p:additionalCssClasses="ksap-sb-course-title"/>
                                                    <bean parent="KSAP-Message"
                                                          p:id="sb-course-selected-message-@{#line.uniqueId}"
                                                          p:additionalCssClasses="ksap-sb-course-subtext"
                                                          p:render="@{#line.getActivityCount(includeClosed) le 0}"
                                                          p:messageText="No@{includeClosed?'t':' open sections'} offered in @{term.name}"/>
                                                    <bean parent="KSAP-Message"
                                                          p:id="sb-course-selected-message-@{#line.uniqueId}"
                                                          p:additionalCssClasses="ksap-sb-course-subtext"
                                                          p:render="@{#line.getActivityCount(includeClosed) gt 0 and #line.lockedIn and #line.selected}"
                                                          p:messageText="Registered for @{term.name}"/>
                                                    <bean parent="KSAP-Message"
                                                          p:id="sb-course-selected-message-@{#line.uniqueId}"
                                                          p:additionalCssClasses="ksap-sb-course-subtext"
                                                          p:render="@{#line.getActivityCount(includeClosed) gt 0 and !#line.lockedIn}"
                                                          p:messageText="@{#line.getSelectedActivityCount(includeClosed)} / @{#line.getActivityCount(includeClosed)} selected"/>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-ActionField">
                                            <property name="action">
                                                <bean parent="Uif-ActionImage"
                                                      p:id="ksap-sb-course-disclosure-icon-@{#line.uniqueId}"
                                                      p:actionScript="showHideActivityOptions('@{#line.uniqueId}')">
                                                    <property name="cssClasses">
                                                        <list merge="true">
                                                            <value>ksap-sb-course-disclosure-icon-closed</value>
                                                        </list>
                                                    </property>
                                                    <property name="actionImage">
                                                        <bean parent="Uif-Image"
                                                              p:source="@{#ConfigProperties['ks.myplan.externalizable.images.url']}/pixel.gif"/>
                                                    </property>
                                                </bean>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>

        <property name="subCollections">
            <list>
                <bean parent="sb_activity_options" p:propertyName="activityOptions"
                      p:additionalCssClasses="ksap-sb-disclosure-closed,ksap-sb-primary-options"
                      p:id="sb_activity_options_@{#line.uniqueId}">
                    <property name="items">
                        <list>
                            <bean parent="KSAP-VerticalFieldGroup">
