    <bean id="sb_schedule_option_template" parent="sb_schedule_option_template-parent"/>
    <bean id="sb_schedule_option_template-parent" abstract="true" parent="KSAP-VerticalBoxGroup" p:hidden="true">
        <property name="layoutManager.cssClasses" value="uif-boxLayoutHorizontalItem"/>
        <property name="items">
            <list>
                <bean parent="KSAP-VerticalBoxGroup" p:id="sb-schedule-option-row-__KSAP_UID__"
                      p:additionalCssClasses="ksap-sb-schedule-row,ksap-sb-deselected">
                    <property name="onClickScript" value="toggleScheduleOption('__KSAP_UID__')"/>
                    <property name="items">
                        <list>
                            <bean parent="KSAP-Message" p:messageText="__KSAP_FORMATTED__"
                                  p:id="sb-schedule-activity-descr-__KSAP_UID__"
                                  p:additionalCssClasses="ksap-sb-schedule-activity-descr"/>
                            <bean parent="KSAP-HorizontalBoxGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="sb_schedule_icon" p:actionScript="KsapScheduleBuild.save('__KSAP_UID__')">
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>ksap-sb-schedule-saveicon</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="KSAP-SimpleInputField" p:propertyName="shuffle">
                                <property name="control">
                                    <bean parent="Uif-HiddenControl"/>
                                </property>
                            </bean>
                            <bean parent="sb_option_control-parent" p:propertyName="selected" p:hidden="true"
                                  p:id="sb-schedule-option-select-__KSAP_UID__"
                                  p:additionalCssClasses="ksap-sb-schedule-select">
                                <property name="control.onChangeScript" value="toggleScheduleOptionSelect('__KSAP_UID__')"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="sb_saved_schedules" parent="sb_saved_schedules-parent"/>
    <bean abstract="true" id="sb_saved_schedules-parent" parent="Uif-VerticalBoxSection" p:id="sb_saved_schedules">
