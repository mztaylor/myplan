    <bean id="schedule_build_page" parent="schedule_build_page-parent"/>
    <bean abstract="true" id="schedule_build_page-parent" parent="KSAP-Page" p:id="schedule_build">
        <property name="layoutManager">
            <bean parent="Uif-VerticalBoxLayout"/>
        </property>
        <property name="items">
            <list>
                <bean id="schedule_build_termId" parent="Uif-InputField" p:propertyName="term.id" p:fieldLabel.render="false">
                    <property name="control">
                        <bean parent="Uif-HiddenControl"/>
                    </property>
                </bean><bean id="schedule_build_learningPlanId" parent="Uif-InputField" p:propertyName="requestedLearningPlanId" p:fieldLabel.render="false">
                    <property name="control">
                        <bean parent="Uif-HiddenControl"/>
                    </property>
                </bean>
                <ref bean="schedule_build_heading"/>
                <ref bean="sb_possible_schedules"/>
                <ref bean="schedule_build_weekview"/>
                <!--<ref bean="sb_schedule_option_template"/>
                <ref bean="sb_reserved_time_template"/>
                <ref bean="sb_weekgroup_template"/>-->
            </list>
        </property>
    </bean>



    <bean id="schedule_build_heading" parent="KSAP-HorizontalBoxGroup">
        <property name="items">
            <list>
                <ref bean="schedule_build_filters"/>
                <bean parent="KSAP-ModuleContainer" p:headerText="Saved Schedules">
                    <property name="items">
                        <list>
                            <bean parent="KSAP-SavedScheduleList"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="schedule_build_filters" parent="KSAP-HorizontalBoxGroup" p:headerText="@{term.name} Calendar" p:style="width: 670px;">
        <property name="header">
            <bean parent="KSAP-HeaderOne"/>
        </property>
        <property name="instructionalMessage">
            <bean parent="KSAP-Message">
                <property name="messageText"
                          value="This calendar shows the meeting days and times for courses in your plan for this quarter. To add or change the courses in your plan, visit your [0] page or [1]."/>
                <property name="inlineComponents">
                    <list>
                        <bean parent="Uif-Link" p:linkText="Plan"
                              p:href="plan?methodToCall=start&amp;viewId=PlannedCourses-FormView"/>
                        <bean parent="Uif-Link" p:linkText="Find Courses"
                              p:href="course?methodToCall=start&amp;viewId=CourseSearch-FormView"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <bean parent="KSAP-VerticalBoxGroup" p:headerText="Include sections that..." p:width="48%">
                    <property name="header">
                        <bean parent="KSAP-HeaderThree"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="KSAP-SimpleInputField" p:propertyName="includeFilters">
                                <property name="control">
                                    <bean parent="Uif-VerticalCheckboxesControl">
                                        <property name="options">
                                            <list>
                                                <bean parent="Uif-KeyLabelPair" p:key="closed" p:value="Have closed sections"/>
                                                <bean parent="Uif-KeyLabelPair" p:key="restrictions" p:value="Have enrollment restrictions"/>
                                                <bean parent="Uif-KeyLabelPair" p:key="registered" p:value="Overlap with my registered courses"/>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="KSAP-VerticalBoxGroup" p:headerText="Exclude sections that meet on..." p:width="48%">
                    <property name="header">
                        <bean parent="KSAP-HeaderThree"/>
                    </property>
                    <property name="layoutManager.additionalCssClasses" value="ksap-sb-reserved-times-container"/>
                    <property name="items">
                        <list/>
                    </property>
                    <property name="footer">
                        <bean parent="Uif-FooterBase">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-ActionLink" p:actionLabel="+ Add a day/time">
                                        <property name="actionScript" value="ksapSbOpenDialog('sb_create_reserved_time','sb/reserved',{methodToCall:'startDialog',termId:'@{term.id}'}, this, e)"/>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KSAP-PossibleScheduleList" parent="KSAP-VerticalBoxGroup" p:id="KSAP-PossibleScheduleList">
        <property name="onDocumentReadyScript" value="
            customRetrieveComponent('KSAP-PossibleScheduleList','possible_schedules_details','search','lookup',{viewId:'PossibleSchedules-LookupView',termId:jQuery('#schedule_build_termId_control').val(),learningPlanId:jQuery('#schedule_build_learningPlanId_control').val()},null,{css:{right:'0px',top:'0px',width:'16px',height:'16px',lineHeight:'16px',border:'none'}});
        "/>
    </bean>

