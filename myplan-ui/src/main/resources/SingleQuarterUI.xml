    <bean id="activityActionDelete" parent="section_button" p:rowSpan="3" p:colSpan="1" p:valign="TOP">
        <property name="label" value=""/>
        <property name="altText" value="Delete"/>
        <property name="style" value="margin:8px 0 0 0;"/>
        <property name="onClickScript"
                  value="myplanAjaxSubmitSectionItem('@{#line.planItemId}', 'removeItem', 'plan', {planItemId:'@{#line.planItemId}',sectionCode:'@{#line.code}',atpId:'@{#line.atpId}',instituteCode:@{#line.instituteCode},registrationCode:'@{#line.registrationCode}',viewId:'PlannedCourse-FormView',primary:@{#line.primary}}, e);"/>
        <property name="cssClasses">
            <list merge="true">
                <value>activityAction</value>
                <value>myplan-delete</value>
                <value>fl-text-align-center</value>
            </list>
        </property>
        <property name="dataAttributes">
            <map merge="true">
                <entry key="initial" value="true"/>
            </map>
        </property>
    </bean>

</beans>