                                    </list>
                                </property>
                            </bean>

                            <!--For Advisers only-->
                            <bean p:id="@{#line.planItemDataObject.id}_toggle" parent="Uif-ActionLink"
                                  p:render="@{T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser() eq true}"
                                  p:actionLabel="Show all sections"
                                  p:style="float:right; display:inline-block; margin-right:10px;">
                                <property name="actionScript"
                                          value="jQuery('#@{#line.courseDetails.courseId}_sections_collection').css('min-height','16px');
                                                 myplanRetrieveComponent('@{#line.courseDetails.courseId}_sections_collection','@{#line.courseDetails.courseId}_sections_collection','start','inquiry',{viewId:'CourseSections-InquiryView',section_term:'@{#line.planItemDataObject.atp}',courseId:'@{#line.courseDetails.courseId}'});
                                                 switchFetchAction('@{#line.planItemDataObject.id}_toggle', '@{#line.courseDetails.courseId}_sections_collection');"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>uif-subCollection</value>
            </list>
        </property>

        <property name="subCollections">
            <list>
                <ref bean="activityOfferingTableCollection"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-VerticalBoxGroup">
                <property name="validationMessages.render" value="false"/>
                <property name="cssClasses">
                    <list merge="true">
                        <value>myplan-credit-total</value>
                    </list>
                </property>
                <property name="items">
                    <list>
                        <bean parent="Uif-MessageField" p:label="Credits" p:messageText="@{dataObject.credits}">
                            <property name="fieldLabel.renderColon" value="false"/>
                            <property name="cssClasses">
                                <list merge="true">
                                    <value>fl-text-bold</value>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="single_Backup_Collection" parent="single_Planned_Collection" p:headerText="Backup">
        <property name="propertyName" value="backupList"/>
        <property name="footer.render" value="false"/>
        <property name="render" value="@{dataObject.backupList.size() gt 0}"/>
        <property name="cssClasses">
            <list merge="true">
                <value>uif-subCollection</value>
                <value>myplan-backup-collection</value>
            </list>
        </property>
    </bean>

    <bean id="activityOfferingTableCollection" parent="course_details_activity_data" p:style="">
        <property name="id" value="@{#line.courseDetails.courseId}_sections_collection"/>
        <property name="header.render" value="false"/>
        <property name="header.lowerGroup.render" value="false"/>
        <property name="headerText" value=""/>
        <property name="header">
            <bean parent="Uif-HeaderFour"/>
        </property>
        <property name="header.lowerGroup">
            <bean parent="Uif-VerticalBoxGroup">
                <property name="validationMessages.render" value="false"/>
                <property name="items">
                    <list></list>
                </property>
            </bean>
        </property>
        <property name="propertyName" value="planActivities"/>
        <property name="layoutManager.id" value="@{#line.courseDetails.courseId}_@{dataObject.atpId.replace('.','-')}"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-course-sections</value>
            </list>
        </property>
        <property name="onDocumentReadyScript" value="
            var tableHead = jQuery('table#@{#line.courseDetails.courseId}_@{dataObject.atpId.replace('.','-')} thead');
            tableHead.before('
                &lt;col style=&quot;width: 56px;&quot;&gt;
                &lt;col style=&quot;width: 84px;&quot;&gt;
                &lt;col style=&quot;width: 263px;&quot;&gt;
                &lt;col style=&quot;width: 48px;&quot;&gt;
                &lt;col style=&quot;width: 79px;&quot;&gt;
                &lt;col style=&quot;width: 73px;&quot;&gt;
                &lt;col style=&quot;width: 25px;&quot;&gt;
            ');
            tableHead.remove();
        "/>
        <property name="items">
            <list>
                <bean parent="activityCode" p:rowSpan="1">
                    <property name="onDocumentReadyScript" value="
                        var row = jQuery('#@{#line.atpId.replace('.','-')}-@{#line.registrationCode}').parents('tr');
                        row.addClass('row');
                        if (@{#line.planItemId NE null}) row.addClass('myplan-section-planned');
                    "/>
                    <property name="items">
                        <list>
                            <bean p:id="@{#line.atpId.replace('.','-')}-@{#line.registrationCode}"
                                  parent="Uif-DataField" p:propertyName="code" p:label="Section"
                                  p:style="margin:4px 0; font-size:1.75em;">
                                <property name="fieldLabel.render" value="false"/>
                            </bean>
                            <bean parent="Uif-MessageField" p:messageText="PCE" p:style="margin:0;"
                                  p:title="UW Professional &amp; Continuing Education"
                                  p:render="@{#line.instituteCode.startsWith('95')}">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>fl-font-size-80</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-ActionLink" p:actionLabel="View more" p:style="margin:0;">
                                <property name="dataAttributes">
                                    <map>
                                        <entry key="collapsed" value="true"/>
                                    </map>
                                </property>
                                <property name="actionScript"
                                          value="toggleSectionDetails(jQuery(this).parents('tr.row'), jQuery(this), 'View more', 'View less')"/>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>fl-font-size-80</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="activityType"/>

                <bean parent="activityMeetingData"/>

                <bean parent="activityRegCode"/>

                <bean parent="activityEnrlRestr"/>

                <bean parent="activityEnrlData"/>

                <bean parent="activityActionDelete" p:rowSpan="1"
                      p:render="@{!T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser()}"/>

                <bean parent="Uif-MessageField" p:rowSpan="1"
                      p:render="@{T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser()}"/>

                <bean parent="activityInstructor">
                    <property name="onDocumentReadyScript" value="
                        var collapsibleRow = jQuery('#instructor_@{#line.atpId.replace('.','-')}_@{#line.registrationCode}').parents('tr');
                        collapsibleRow.addClass('collapsible').hide();
                        collapsibleRow.find('.activityOther').parents('td').attr('colspan', '3');
                        if (@{#line.planItemId NE null}) collapsibleRow.addClass('myplan-section-planned');
                    "/>
                </bean>

                <bean parent="activityOther" p:colSpan="5"/>

                <bean parent="activityAdditionalDetails" p:colSpan="7">
                    <property name="onDocumentReadyScript" value="
                        var collapsibleRow = jQuery('#details_@{#line.atpId.replace('.','-')}_@{#line.registrationCode}').parents('tr');
                        collapsibleRow.addClass('collapsible').hide();
                        collapsibleRow.find('.activityAdditionalDetails').parents('td').attr('colspan', '5');
                        if (@{#line.planItemId NE null}) collapsibleRow.addClass('myplan-section-planned');
                    "/>
                </bean>

            </list>
        </property>
    </bean>

