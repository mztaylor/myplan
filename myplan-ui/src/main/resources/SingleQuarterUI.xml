                <bean parent="Uif-HorizontalFieldGroup" p:render="@{#line.activityOfferingItem ne null}" p:valign="TOP">
                    <property name="id" value="details_@{#line.uuid}"/>
                    <property name="group.validationMessages.render" value="false"/>
