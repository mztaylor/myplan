    <bean id="audit_instruction" parent="Uif-Message" p:cssClasses="fl-text-gray fl-font-size-90">
        <property name="messageText" value="&lt;u&gt;Some programs are not included&lt;/u&gt; in the degree program list for audit."/>
    </bean>


</beans>