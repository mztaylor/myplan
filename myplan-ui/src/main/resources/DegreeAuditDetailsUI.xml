    <!-- Not used to view audit reports. -->
    <bean id="DegreeAudit-FormView" parent="MyPlanFormView">

        <!-- To Support progressive disclosure of campus select -->
        <property name="persistFormToSession" value="true"/>
        <property name="viewName" value="DegreeAudit-FormView"/>
        <property name="id" value="DegreeAudit-FormView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="entryPageId" value="degree_audit"/>
        <property name="applyDirtyCheck" value="false"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>ks-myplan/scripts/audit.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-myplan/css/audit.css</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:headerText="Degree Audit" p:id="degree_audit">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 710px; margin-right: 10px;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <ref bean="run_degree_audits"/>
                                        <ref bean="audit_report_section"/>
                                    </list>
                                </property>
                                <property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="#{ T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser() }">
                                            <property name="replacement">
                                                <list>
                                                    <ref bean="adviser_actions_message"/>
                                                    <ref bean="audit_report_section"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 230px; margin: 0;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="myplan_section" p:style="">
                                            <property name="items">
                                                <list>
                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="degree_audits_list"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="watch_list"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:headerText="Degree Audit" p:id="degree_audit_empty_page">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 710px; margin-right: 10px;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <ref bean="run_degree_audits"/>
                                        <ref bean="empty_degree_audits"/>

                                    </list>
                                </property>
                                <property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="#{ T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser() }">
                                            <property name="replacement">
                                                <list>
                                                    <ref bean="adviser_actions_message"/>
                                                    <ref bean="audit_report_section"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 230px; margin: 0;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="myplan_section" p:style="">
                                            <property name="items">
                                                <list>
                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="non_student_degree_audits_list"/>
                                                            </list>
                                                        </property>
                                                        <property name="propertyReplacers">
                                                            <list>
                                                                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                                                      p:condition="#{ T(org.kuali.student.myplan.utils.UserSessionHelper).isStudent() }">
                                                                    <property name="replacement">
                                                                        <list>
                                                                            <ref bean="degree_audits_list"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="watch_list"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.audit.form.DegreeAuditForm"/>
    </bean>

    <bean id="audit_report_section" parent="Uif-VerticalBoxSubSection"
          p:progressiveRenderViaAJAX="true" p:refreshWhenChangedPropertyNames="#form.field44">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-audit-report</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxGroup">
                    <property name="items">
                        <list>
                            <bean id="txtaudit" parent="Uif-Message" p:messageText="@{getAuditHtml()}" p:style="display:block;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="run_degree_audits" parent="Uif-VerticalBoxGroup" p:style="width: 696px;">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-course-search-panel</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderFive"/>
        </property>
        <property name="items">
            <list>
                <ref bean="select_instruction"/>
                <ref bean="campus_params"/>
                <ref bean="program_params"/>
                <!-- <ref bean="degree_audit_run"/> -->
                <!-- <ref bean="audit_type"/> -->
                <ref bean="audit_instruction"/>
            </list>
        </property>
    </bean>

    <bean id="empty_degree_audits" parent="Uif-HorizontalBoxGroup"  p:style="padding: 10px;" p:headerText="How to Use Audit for Academic Planning [TBD]">
        <property name="header">
            <bean parent="Uif-HeaderFour" p:style="padding: 5px;"/>
        </property>
        <property name="items">
            <list>
                <ref bean="degree_audit_info_1"/>
                <ref bean="degree_audit_info_2"/>
            </list>
        </property>
    </bean>



    <bean id="degree_audit_info_1" parent="Uif-VerticalFieldGroup" p:style="padding: 10px;">
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-300</value>
                <value>myplan-audit-info-panel</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean id="audit_info_header_1" parent="Uif-Message" p:style="padding: 5px;" p:cssClasses="fl-font-size-130 fl-text-gray fl-text-bold myplan-carousel-list">
                    <property name="messageText" value="Track your Progress"/>
                </bean>
                <bean id="audit_info_text_1" parent="Uif-Message" p:style="padding: 5px;" p:cssClasses="fl-font-size-100 ">
                    <property name="messageText" value="Be on top of your required credits and courses. Audit will tell you exactly how what you need to do to meet all requirements."/>
                </bean>
                <!--<bean id="audit_info_img_1" parent="Uif-ImageField" p:altText="audit" p:style="padding: 5px;"
                      p:source="@{#ConfigProperties['ks.myplan.externalizable.images.url']}auditSample.jpg"/>-->
                <bean id="audit_info_footer_1" parent="Uif-Message" p:style="padding: 5px;" p:cssClasses="fl-font-size-100 ">
                    <property name="messageText" value="Select your degree above &amp; run audit to see your academic status now."/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="degree_audit_info_2" parent="Uif-VerticalFieldGroup" p:style="padding: 10px;" >
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-300</value>
                <value>myplan-audit-info-panel</value>
                <value>myplan-carousel-list</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean id="audit_info_header_2" parent="Uif-Message" p:style="padding: 5px;" p:cssClasses="fl-font-size-130 fl-text-gray fl-text-bold ">
                    <property name="messageText" value="Explore programs &amp; minors"/>
                </bean>
                <bean id="audit_info_text_2" parent="Uif-Message" p:style="padding: 5px;" p:cssClasses="fl-font-size-100 ">
                    <property name="messageText" value="Still deciding which degree program apply to? Audit can help you to see your academic progress for any degree."/>
                </bean>
                <!--<bean id="audit_info_img_2" parent="Uif-ImageField" p:altText="audit" p:style="padding: 5px;"
                      p:source="@{#ConfigProperties['ks.myplan.externalizable.images.url']}auditSample2.jpg"/>-->
                <bean id="audit_info_footer_2" parent="Uif-Message" p:style="padding: 5px;" p:cssClasses="fl-font-size-100 ">
                    <property name="messageText" value="Select your degree above &amp; run audit to explore a major or more."/>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="select_instruction" parent="Uif-Message" p:cssClasses="myplan-text-normal">
        <property name="messageText"
                  value="Select the campus and enter degree program or minor to run audit. It may take 1-5 minutes."/>
    </bean>

    <bean id="campus_params" parent="Uif-HorizontalFieldGroup">
        <property name="items">
            <list>
                <bean id="radio_campusParam" parent="Uif-InputField" p:propertyName="campusParam">
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.AuditRunCampusParam"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="program_params" parent="Uif-HorizontalFieldGroup">
        <property name="items">
            <list>
                <bean id="select_programParam_seattle" parent="Uif-InputField" p:propertyName="programParam"
                      p:progressiveRenderViaAJAX="true" p:progressiveRender="campusParam eq '0'">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.DegreeAuditSeattlePrograms"/>
                    </property>
                </bean>
                <bean id="select_programParam_bothell" parent="Uif-InputField" p:propertyName="programParam"
                      p:progressiveRenderViaAJAX="true" p:progressiveRender="campusParam eq '1'">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.DegreeAuditBothellPrograms"/>
                    </property>
                </bean>
                <bean id="select_programParam_tacoma" parent="Uif-InputField" p:propertyName="programParam"
                      p:progressiveRenderViaAJAX="true" p:progressiveRender="campusParam eq '2'">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.DegreeAuditTacomaPrograms"/>
                    </property>
                </bean>
                <ref bean="degree_audit_run"/>
            </list>
        </property>
    </bean>


    <bean id="degree_audit_run" parent="Uif-AjaxActionButton" p:methodToCall="runAudit"
          p:refreshId="audit_report_section"
          p:actionLabel="Run Degree Audit">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-button</value>
                <value>myplan-button-blue</value>
            </list>
        </property>
    </bean>


