    <bean id="PlannedCourses-LookupView" parent="MyPlanLookupView">
        <property name="viewName" value="PlannedCourses-LookupView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.plan.dataobject.PlanItemDataObject"/>
        <property name="viewHelperServiceClassName"
                  value="org.kuali.student.myplan.plan.service.PlannedCoursesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="page.header.render" value="false"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-LookupPage" p:id="planned_courses_detail_page" p:title="Your Planned Courses List">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="planned_courses_detail"/>
                            <!-- <ref bean="saved_course_myplan_section"/> -->
                        </list>
                    </property>
                </bean>
            </list>
        </property>

        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <property name="footer.render" value="false"/>
    </bean>

    <bean id="planned_courses_detail" parent="Uif-VerticalBoxSubSection" p:errorsField.render="false">
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-container-720</value>
                <value>myplan-saved-courses-detail</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="planned_courses_detail_list"/>
                <!-- <ref bean="saved_courses_detail_list_empty"/> -->
            </list>
        </property>
    </bean>

    <bean id="planned_courses_detail_list" parent="Uif-ListCollectionSection">
        <property name="title" value="You have &lt;strong&gt;@{searchResults.size()}&lt;/strong&gt; courses in your list"/>
        <property name="layoutManager.lineGroupPrototype.disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.errorsField.render" value="false"/>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.plan.dataobject.PlanItemDataObject"/>
        <property name="propertyName" value="searchResults"/>
        <property name="render" value="@{searchResults.size() gt 0 ? true : false}"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-stacked-list</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="items">
                        <list>
                             <bean parent="Uif-MessageField" p:messageText="@{#line.courseDetails.code}">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-text-bold</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-MessageField" p:messageText="@{#line.courseDetails.courseTitle}">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-text-bold</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-MessageField" p:messageText="@{#line.courseDetails.credit}">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-text-bold</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-DataField" p:propertyName="atpIds">
                                <property name="propertyEditor">
                                    <bean parent="data_list_formatter" p:emptyListMessage="n/a"/>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="AddPlannedCourse-FormView" parent="MyPlanFormView">
        <property name="id" value="AddPlannedCourse-FormView"/>
        <property name="entryPageId" value="add_planned_course"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="header.render" value="false" />
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="add_planned_course" p:title="">
                    <property name="items">
                        <list>
                            <ref bean="add_planned_course_fields"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="formClass" value="org.kuali.student.myplan.plan.form.PlanForm"/>
    </bean>

    <!-- Group for "Add Plan Item" inputs -->
    <bean id="add_planned_course_fields" parent="Uif-VerticalFieldGroup">
        <property name="group.errorsField.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:target="" p:style="width:284px; display:block;">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>fl-text-bold</value>
                            <value>myplan-text-wrap</value>
                        </list>
                    </property>

                    <property name="linkLabel" value="@{courseDetails.code} @{courseDetails.courseTitle} (@{courseDetails.credit})"/>
                    <property name="title" value="@{courseDetails.code.replaceAll(&quot;( )+&quot;, &quot; &quot;)} @{courseDetails.courseTitle} (@{courseDetails.credit})"/>
                    <property name="hrefText" value="inquiry?methodToCall=start&amp;viewId=CourseDetails-InquiryView&amp;courseId=@{courseDetails.courseId}"/>
                </bean>

                <bean parent="Uif-MessageField" p:messageText="Which quarter would you like add?"/>

                <bean parent="Uif-InputField" p:propertyName="termsList" p:width="auto" p:defaultValue="0">
                    <property name="control">
                        <bean parent="Uif-VerticalCheckboxesControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.utils.PublishedTermsListBuilder">
                            <property name="additionalListItemsBottom">
                                <map>
                                    <entry key="other" value="Other" />
                                </map>
                            </property>
                        </bean>
                    </property>
                </bean>

                <ref bean="add_planned_course_other"/>

                <bean p:id="addPlannedCourse" parent="Uif-PrimaryActionButton" p:methodToCall="addPlannedCourse"
                      p:actionLabel="Add To Plan" p:style="padding: 0px 30px;">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>fl-font-size-90</value>
                            <value>myplan-button</value>
                            <value>myplan-button-blue</value>
                        </list>
                    </property>
                    <!--<property name="clientSideJs" value="myplanFormSubmit('add_planned_course', 'addPlannedCourse')"/>-->
                    <property name="onDocumentReadyScript" value="myplanFormWrapper('add_planned_course', 'startAddPlannedCourseForm', 'plan', {viewId:'AddPlannedCourse-FormView',courseId:'@{courseDetails.courseId}'})"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="add_planned_course_other" parent="Uif-HorizontalFieldGroup" p:progressiveRender="termsList eq 'other'">
        <property name="group.errorsField.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="term" p:label="Select Quarter"
                      p:labelField.styleClasses="myplan-text-normal" p:labelField.renderColon="false" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.plan.util.TermsListBuilder"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="year" p:label="Select Year"
                      p:labelField.styleClasses="myplan-text-normal" p:labelField.renderColon="false" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.plan.util.YearListBuilder"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>