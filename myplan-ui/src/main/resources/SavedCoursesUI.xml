    <bean id="savedCoursesListActionsView" parent="KSFormView">
        <property name="id" value="savedCoursesListActionsView"/>
        <property name="formClass" value="org.kuali.student.myplan.course.form.SavedCoursesListForm"/>
        <property name="items">
            <list>
                <bean parent="GroupSectionGridLayout">
                    <property name="layoutManager.numberOfColumns" value="2"/>
                    <property name="layoutManager.applyDefaultCellWidths" value="false"/>
                    <property name="errorsField.render" value="true"/>
