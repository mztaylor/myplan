    <bean id="SavedCoursesItem" parent="SavedCoursesItem-parentBean"/>
    <bean id="SavedCoursesItem-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="objectLabel" value="Saved Courses"/>
        <property name="dataObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="titleAttribute" value="courseID"/>
        <property name="attributes">
            <list>
                <ref bean="SavedCoursesItem.courseID"/>
                <ref bean="SavedCoursesItem.code"/>
                <ref bean="SavedCoursesItem.title"/>
                <ref bean="SavedCoursesItem.credit"/>
            </list>
        </property>
    </bean>

    <bean id="SavedCoursesItem.courseID" parent="SavedCoursesItem.courseID-parentBean"/>
    <bean id="SavedCoursesItem.courseID-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="courseID"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course ID"/>
        <property name="shortLabel" value="ID"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="100"/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="100"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.code" parent="SavedCoursesItem.code-parentBean"/>
    <bean id="SavedCoursesItem.code-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="code"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Code"/>
        <property name="shortLabel" value="Code"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="10"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="10"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.title" parent="SavedCoursesItem.title-parentBean"/>
    <bean id="SavedCoursesItem.title-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="title"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Title"/>
        <property name="shortLabel" value="Title"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="40"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="40"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.credit" parent="SavedCoursesItem.credit-parentBean"/>
    <bean id="SavedCoursesItem.credit-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="credit"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Credit"/>
        <property name="shortLabel" value="Credit"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="20"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="20"/>
        </property>
    </bean>

    <bean id="SavedCourses" parent="SavedCourses-parentBean"/>
    <bean id="SavedCourses-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="objectLabel" value="Saved Courses"/>
        <property name="dataObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCourses"/>
        <property name="titleAttribute" value="userID"/>
        <property name="attributes">
            <list>
                <ref bean="SavedCourses.userID"/>
            </list>
        </property>
    </bean>

    <bean id="SavedCourses.userID" parent="SavedCourses.userID-parentBean"/>
    <bean id="SavedCourses.userID-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="userID"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="User ID"/>
        <property name="shortLabel" value="ID"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="100"/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="100"/>
        </property>
    </bean>

    <bean id="SavedCourses.savedCoursesList" parent="SavedCourses.savedCoursesList-parentBean"/>
    <bean id="SavedCourses.savedCoursesList-parentBean" abstract="true" parent="CollectionDefinition">
        <property name="name" value="savedCoursesList"/>
        <property name="shortLabel" value="saved"/>
        <property name="summary">
            <value>Saved Courses</value>
        </property>
        <property name="label" value="Saved Courses"/>
        <property name="elementLabel" value="Saved Courses"/>
        <property name="minOccurs" value="0"/>
        <property name="dataObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
    </bean>


    <bean id="SavedCoursesInquiryView" parent="KSInquiryView">
        <property name="breadcrumbs.render" value="false"/>
        <property name="page.header.render" value="false"/>
        <property name="title" value="title goes here"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.course.dataobject.SavedCourses"/>
        <property name="viewHelperServiceClassName"
                  value="org.kuali.student.myplan.course.service.SavedCoursesInquiryView"/>
        <property name="singlePageView" value="true"/>
        <property name="styleClasses" value="myplan"/>
        <property name="additionalCssFiles">
            <list>
                <value>/ks-myplan/css/course-search.css</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="saved_courses_page"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="Footer"/>
        </property>
    </bean>


    <!-- Layout for Course Search Form Page -->
    <bean id="saved_courses_page" parent="Group"
          p:layoutManager.orientation="HORIZONTAL">
        <property name="disclosure.render" value="false"/>
        <property name="styleClasses" value=""/>
        <property name="items">
            <list>
                <bean parent="MessageField" p:messageText="Voila!"/>
                <ref bean="saved_courses_list"/>
            </list>
        </property>
    </bean>

    <bean id="saved_courses_list" parent="CollectionGroup">
        <property name="disclosure.render" value="false"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="layoutManager.lineGroupPrototype.disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.footer.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="propertyName" value="savedCoursesList"/>
        <property name="items">
            <list>
                <bean parent="ActionLinkField" p:actionLabel="@{#line.code} @{#line.title} " p:labelField.render="false"/>
                <!--
                <bean parent="MessageField" p:messageText="@{#line.title}"/>
                -->
            </list>
        </property>
    </bean>

</beans>