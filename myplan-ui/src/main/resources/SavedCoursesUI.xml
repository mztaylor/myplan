    <bean id="SavedCoursesItem" parent="SavedCoursesItem-parentBean"/>
    <bean id="SavedCoursesItem-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="objectLabel" value="Saved Courses"/>
        <property name="dataObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="titleAttribute" value=""/>
        <property name="attributes">
            <list>
                <ref bean="SavedCoursesItem.id"/>
                <ref bean="SavedCoursesItem.dateAdded"/>
            </list>
        </property>
        <property name="complexAttributes">
            <list>
                <ref bean="SavedCoursesItem.courseDetails"/>
            </list>
        </property>
    </bean>

    <bean id="SavedCoursesItem.id" parent="SavedCoursesItem.id-parentBean"/>
    <bean id="SavedCoursesItem.id-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="id"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Watch List Item ID"/>
        <property name="shortLabel" value="Watch List Item ID"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="10"/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="10"/>
        </property>
    </bean>


    <bean id="SavedCoursesItem.courseDetails" parent="ComplexAttributeDefinition">
        <property name="name" value="courseDetails"/>
         <property name="dataObjectEntry" ref="CourseDetails"/>
    </bean>

    <bean id="SavedCoursesItem.dateAdded" parent="SavedCoursesItem.dateAdded-parentBean"/>
    <bean id="SavedCoursesItem.dateAdded-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="dateAdded"/>
        <property name="dataType" value="DATE"/>
        <property name="label" value="Date Added"/>
        <property name="shortLabel" value="Added"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="16"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="20"/>
        </property>
    </bean>

    <bean id="SavedCoursesSummary-LookupView" parent="MyPlanLookupView">
        <property name="title" value="Saved Courses Summary"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="page.header.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="viewHelperServiceClassName"
                  value="org.kuali.student.myplan.course.service.SavedCoursesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="Uif-VerticalBoxGroup"/>
        </property>
        <property name="resultsGroup">
            <bean id="saved_courses_summary" parent="saved_courses_summary_list"/>
        </property>
    </bean>

    <bean id="saved_courses_summary_list" parent="Uif-ListCollectionSection">
        <property name="header.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.errorsField.render" value="false"/>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="propertyName" value="searchResults"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false" p:id="@{#line.id}">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="onDocumentReadyScript" value="truncateField('@{#line.id}');"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="@{#line.courseDetails.code}">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-text-bold</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-Link" p:linkLabel="@{#line.courseDetails.courseTitle}">
                                <property name="onClickScript" value="openPopUp('@{#line.id}','course_details_popup','start','inquiry',{viewId:'CourseDetailsPopup-InquiryView',courseId:'@{#line.courseDetails.courseId}'}, e, 'li',{width:'300px'});"/>
                                <property name="target" value=""/>
                                <property name="hrefText" value="#"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-text-ellipsis</value>
                                    </list>
                                </property>
                            </bean>
                            <!--<bean parent="Uif-MessageField" p:messageText="@{#line.courseDetails.courseTitle}">
                                <property name="onClickScript" value="openPopUp('@{#line.id}','course_details_popup','start','inquiry',{viewId:'CourseDetailsPopup-InquiryView',planItemId:'@{#line.id}'}, e, 'li',{width:'300px',minHeight:'16px'});"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>courseName</value>
                                        <value>myplan-text-ellipsis</value>
                                    </list>
                                </property>
                            </bean>-->
                            <bean parent="Uif-MessageField" p:messageText="@{#line.courseDetails.credit}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <bean parent="saved_courses_summary_footer"/>
        </property>
    </bean>

    <bean id="saved_courses_summary_footer" parent="Uif-VerticalBoxSection" p:errorsField.render="false" p:header.render="false" p:style="padding: 6px 4px;">
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:style="display: block;">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>fl-text-align-right</value>
                        </list>
                    </property>
                    <property name="linkLabel" value="View @{searchResults.size() lt 2 ? 'course' : 'all '+searchResults.size()+' courses'} in full details"/>
                    <property name="title" value="View @{searchResults.size() lt 2 ? 'course' : 'all '+searchResults.size()+' courses'} in full details"/>
                    <property name="hrefText" value="lookup?methodToCall=search&amp;viewId=SavedCoursesDetail-LookupView"/>
                    <property name="render" value="@{searchResults.size() gt 0 ? 'true' : 'false'}"/>
                    <property name="target" value=""/>
                </bean>
                <bean parent="Uif-HorizontalBoxGroup" p:errorsField.render="false" p:style="padding: 1em 0px;">
                    <property name="render" value="@{searchResults.size() gt 0 ? 'false' : 'true'}"/>
                    <property name="styleClasses">
                        <list merge="true">
                            <value>fl-text-align-center</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="You don't have any saved courses. Save a course by adding from the search results (TBD)"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="SavedCoursesDetail-LookupView" parent="MyPlanLookupView">
        <property name="page.title" value="Watch List"/>
        <property name="viewName" value="SavedCoursesDetail-LookupView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="viewHelperServiceClassName"
                  value="org.kuali.student.myplan.course.service.SavedCoursesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>/ks-myplan/jquery-ui/jquery-ui.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>/ks-myplan/scripts/myplan.widgets.js</value>
            </list>
        </property>


       <!--<property name="page">
            <bean parent="Uif-LookupPage">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="saved_courses_summary_list"/>
                            <ref bean="myplan_section"/>
                        </list>
                    </property>
            </bean>
        </property>-->

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="Uif-VerticalBoxGroup"/>
        </property>
        <property name="resultsGroup">
            <bean id="saved_courses_detail" parent="saved_courses_detail_list"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
    </bean>

    <bean id="saved_courses_detail_list" parent="Uif-ListCollectionSection">
        <property name="title" value="You have &lt;strong&gt;@{searchResults.size()}&lt;/strong&gt; courses in your list"/>
        <property name="layoutManager.lineGroupPrototype.disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.errorsField.render" value="false"/>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="propertyName" value="searchResults"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-container-720</value>
                <value>myplan-saved-courses-detail</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-Link" p:target="">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-text-bold</value>
                                    </list>
                                </property>
                                <property name="linkLabel" value="@{#line.courseDetails.code} @{#line.courseDetails.courseTitle} (@{#line.courseDetails.credit})"/>
                                <property name="title" value="@{#line.courseDetails.code} @{#line.courseDetails.courseTitle} (@{#line.courseDetails.credit})"/>
                                <property name="hrefText" value="inquiry?methodToCall=start&amp;viewId=CourseDetails-InquiryView&amp;courseId=@{#line.courseDetails.courseId}"/>
                                <property name="labelField.render" value="false"/>
                            </bean>
                            <bean parent="Uif-DataField" p:propertyName="courseDetails.genEdRequirements">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-data-list</value>
                                        <value>fl-text-gray</value>
                                        <value>myplan-text-italic</value>
                                    </list>
                                </property>
                                <property name="propertyEditor" ref="data_list_formatter"/>
                                <property name="render" value="@{#line.courseDetails.genEdRequirements.size() gt 0 ? 'true' : 'false'}"/>
                            </bean>
                            <bean parent="Uif-DataField" p:propertyName="dateAdded" p:label="Added on"
                                  p:labelField.renderColon="false" p:labelField.styleClasses="myplan-text-normal"
                                  p:labelField.render="true">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-text-gray</value>
                                        <value>myplan-text-italic</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label="Scheduled For" p:propertyName="courseDetails.scheduledTerms"
                                p:labelField.styleClasses="fl-text-gray myplan-text-normal" p:labelPlacement="LEFT">
                                <property name="propertyEditor" ref="scheduled_terms_list_formatter"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-data-list</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-DataField" p:label="Projected For" p:propertyName="courseDetails.termsOffered"
                                  p:labelField.styleClasses="fl-text-gray myplan-text-normal" p:labelPlacement="LEFT">
                                <property name="propertyEditor" ref="data_list_formatter"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-data-list</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label="Course Requisites" p:propertyName="courseDetails.requisites"
                                  p:labelField.styleClasses="fl-text-gray myplan-text-normal" p:labelPlacement="LEFT">
                                <property name="propertyEditor" ref="data_list_formatter"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-data-list</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label="Course Description" p:propertyName="courseDetails.courseDescription"
                                p:labelField.styleClasses="fl-text-gray myplan-text-normal" p:labelPlacement="TOP">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>courseDescription</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-HorizontalFieldGroup" p:labelField.render="false">
                    <property name="group.errorsField.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton" p:actionLabel="Move to Plan">
                                <property name="clientSideJs" value="alert('This course has been moved to your plan');"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-button</value>
                                        <value>myplan-button-gray</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-PrimaryActionButton" p:actionLabel="Delete">
                                <property name="clientSideJs" value="removeSavedCourse('remove_saved_course', 'plan', 'removeItem', 'SavedCoursesListActions-FormView', '@{#line.id}', '@{#line.courseDetails.code}', e);"/>
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>myplan-button</value>
                                        <value>myplan-button-transparent</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Saved courses actions view and response pages -->
    <bean id="SavedCoursesListActions-FormView" parent="MyPlanFormView">
        <property name="id" value="SavedCoursesListActions-FormView"/>
        <property name="formClass" value="org.kuali.student.myplan.course.form.SavedCoursesListForm"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="add_plan_item_result">
                    <property name="items">
                        <list>
                            <ref bean="add_plan_item_page"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="remove_plan_item_result">
                    <property name="items">
                        <list>
                            <ref bean="remove_plan_item_page"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

     <bean id="add_plan_item_page"  parent="Uif-VerticalBoxSection" p:errorsField.render="true">
        <property name="items">
            <list>
                <bean id="add_plan_item_key" parent="Uif-DataField" p:propertyName="planItemId"/>
            </list>
        </property>
    </bean>

    <bean id="remove_plan_item_page" parent="Uif-VerticalBoxSection" p:errorsField.render="true">
        <property name="items">
            <list>
                 <bean id="remove_plan_item_key" parent="Uif-MessageField" p:messageText=""/>
            </list>
        </property>
    </bean>

</beans>