    <bean id="SavedCoursesItemMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="maintainableClass" value="org.kuali.student.myplan.course.service.SavedCoursesMaintainableImpl"/>
        <property name="documentTypeName" value="SavedCoursesItemMaintenanceDocument"/>
        <property name="documentAuthorizerClass" value="org.kuali.student.myplan.course.util.SavedCoursesDocumentAuthorizer"/>
