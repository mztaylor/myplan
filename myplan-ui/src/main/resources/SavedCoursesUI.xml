    <bean id="SavedCoursesItem" parent="SavedCoursesItem-parentBean"/>
    <bean id="SavedCoursesItem-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="objectLabel" value="Saved Courses"/>
        <property name="dataObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="titleAttribute" value="courseID"/>
        <property name="attributes">
            <list>
                <ref bean="SavedCoursesItem.id"/>
                <ref bean="SavedCoursesItem.courseID"/>
                <ref bean="SavedCoursesItem.code"/>
                <ref bean="SavedCoursesItem.title"/>
                <ref bean="SavedCoursesItem.credit"/>
                <ref bean="SavedCoursesItem.requisites"/>
                <ref bean="SavedCoursesItem.added"/>
            </list>
        </property>
    </bean>

    <bean id="SavedCoursesItem.id" parent="SavedCoursesItem.id-parentBean"/>
    <bean id="SavedCoursesItem.id-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="id"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Plan Item ID"/>
        <property name="shortLabel" value="ID"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="100"/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="100"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.courseID" parent="SavedCoursesItem.courseID-parentBean"/>
    <bean id="SavedCoursesItem.courseID-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="courseID"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course ID"/>
        <property name="shortLabel" value="Course ID"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="100"/>
        <property name="validCharactersConstraint">
            <bean parent="NoWhitespacePatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="100"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.code" parent="SavedCoursesItem.code-parentBean"/>
    <bean id="SavedCoursesItem.code-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="code"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Code"/>
        <property name="shortLabel" value="Code"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="10"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="10"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.title" parent="SavedCoursesItem.title-parentBean"/>
    <bean id="SavedCoursesItem.title-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="title"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Title"/>
        <property name="shortLabel" value="Title"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="40"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="40"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.credit" parent="SavedCoursesItem.credit-parentBean"/>
    <bean id="SavedCoursesItem.credit-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="credit"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Credit"/>
        <property name="shortLabel" value="Credit"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="20"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="20"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.requisites" parent="SavedCoursesItem.requisites-parentBean"/>
    <bean id="SavedCoursesItem.requisites-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="prereqList"/>
        <property name="dataType" value="STRING"/>
        <property name="label" value="Course Requisites"/>
        <property name="shortLabel" value="Requisites"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="256"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="20"/>
        </property>
    </bean>

    <bean id="SavedCoursesItem.added" parent="SavedCoursesItem.added-parentBean"/>
    <bean id="SavedCoursesItem.added-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="added"/>
        <property name="dataType" value="DATE"/>
        <property name="label" value="Date Added"/>
        <property name="shortLabel" value="Added"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="16"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="TextControl" p:size="20"/>
        </property>
    </bean>

    <bean id="SavedCoursesSummaryView" parent="KSLookupView">
        <property name="title" value="Saved Courses Summary"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="page.header.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="viewHelperServiceClassName"
                  value="org.kuali.student.myplan.course.service.SavedCoursesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="styleClasses" value="myplan"/>
        <property name="additionalCssFiles">
            <list>
                <value>/ks-myplan/css/course-search.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>/ks-myplan/scripts/myplan.widgets.js</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="GroupBodyOnly"/>
        </property>
        <property name="resultsGroup">
            <bean id="saved_courses_summary" parent="saved_courses_summary_list"/>
        </property>
        <property name="footer">
            <bean parent="Footer"/>
        </property>
    </bean>

    <bean id="saved_courses_summary_list" parent="ListGroup">
        <property name="disclosure.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="layoutManager.lineGroupPrototype.disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.errorsField.render" value="false"/>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.course.dataobject.SavedCoursesItem"/>
        <property name="propertyName" value="searchResults"/>
        <property name="onDocumentReadyScript" value="truncateField('saved_courses_summary');"/>
        <property name="items">
            <list>
                <bean parent="FieldGroup" p:labelField.render="false">
                    <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                    <property name="items">
                        <list>
                            <bean parent="MessageField" p:messageText="@{#line.code}"
                                  p:styleClasses="courseCode fl-text-bold"/>
                            <bean parent="MessageField" p:messageText="@{#line.title}" p:styleClasses="courseName ellipsis"/>
                            <bean parent="MessageField" p:messageText="@{#line.credit}" p:styleClasses="courseCredits"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <bean parent="saved_courses_summary_footer"/>
        </property>
    </bean>

    <bean id="saved_courses_summary_footer" parent="Group">
        <property name="disclosure.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="errorsField.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="LinkField" p:linkLabel="View @{searchResults.size() lt 2 ? 'course' : 'all '+searchResults.size()+' courses'} in full details" p:hrefText="#link"
                      p:title="View @{searchResults.size() lt 2 ? 'course' : 'all '+searchResults.size()+' courses'} in full details" p:styleClasses="link_viewall" p:target="">
                    <property name="render" value="@{searchResults.size() gt 0 ? 'true' : 'false'}"/>
                </bean>
                <bean parent="Group" p:layoutManager.orientation="HORIZONTAL">
                    <property name="header.render" value="false"/>
                    <property name="disclosure.render" value="false"/>
                    <property name="errorsField.render" value="false"/>
                    <property name="render" value="@{searchResults.size() gt 0 ? 'false' : 'true'}"/>
                    <property name="styleClasses" value=""/>
                    <property name="items">
                        <list>
                            <bean parent="MessageField"
                                  p:messageText="You don't have any saved courses. Save a course by adding ("/>
                            <bean parent="ImageField" p:source="/myplan-embedded-dev/ks-myplan/images/btnAdd.png"
                                  p:altText="Example of Add to Plan button"/>
                            <bean parent="MessageField"
                                  p:messageText=") from the search results (TBD)"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

