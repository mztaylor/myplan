            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="course_search_fields"/>
                <ref bean="course_search_params"/>
            </list>
        </property>
    </bean>

    <!-- Group for Search Input Fields -->
    <bean id="course_search_fields" parent="Uif-HorizontalFieldGroup">
        <property name="group.errorsField.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="searchQuery" p:label="Search for" p:labelField.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:watermarkText="E.g. English 1xx, CHEM 142">
                            <property name="onDocumentReadyScript" value="
                                jq(&quot;input[name='searchQuery'][type='text']&quot;).blur().bind('keypress', function(e) {
	                                if ( e.keyCode === 13 ) jq(&quot;button.myplan-button.course-search-submit&quot;).click();
	                            });
	                        "/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="searchTerm" p:label="in"
                      p:labelField.styleClasses="myplan-text-normal" p:labelField.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.PublishedTermsListBuilder"/>
                    </property>
                </bean>
                <bean p:id="searchForCourses" parent="Uif-PrimaryActionButton" p:methodToCall="searchForCourses"
                      p:actionLabel="Search" p:jumpToIdAfterSubmit="TOP" p:style="padding: 0px 30px;">
                    <property name="onClickScript" value="
                        jq.cookie( 'course_search_facets', null, { expires: -1, path: '/' } );
                        jq.cookie( 'SpryMedia_DataTables_course_search_results_datatable_course', null, { expires: -1, path: '/student/myplan/' } );
                    "/>
                    <property name="styleClasses">
                        <list merge="true">
                            <value>course-search-submit</value>
                            <value>myplan-button</value>
                            <value>myplan-button-blue</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Group for Search Input Parameters -->
    <bean id="course_search_params" parent="Uif-HorizontalFieldGroup">
        <property name="group.errorsField.render" value="false"/>
        <property name="items">
