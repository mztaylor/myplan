    <!-- Group for Empty Table Result Set -->
    <bean id="course_search_results_empty" parent="Uif-VerticalBoxGroup" p:errorsField.render="false">
        <property name="render" value="@{getCourseSearchResults().size() gt 0 ? false : true}"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-course-search-results</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="0 results found">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>dataTables_info</value>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxGroup" p:errorsField.render="false">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>myplan-course-search-empty</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean id="empty_table_message1" parent="Uif-MessageField"
                                  p:messageText="We couldn't find anything matching your search.">
                                <property name="styleClasses">
                                    <list merge="true">
                                        <value>fl-font-size-120</value>
                                        <value>fl-text-bold</value>
                                    </list>
                                </property>
                            </bean>
                            <bean id="empty_table_message2" parent="Uif-MessageField"
                                  p:messageText="A few suggestions:"/>
                            <bean id="empty_table_message_list" parent="Uif-VerticalBoxGroup" p:errorsField.render="false">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-MessageField" p:messageText="Check your spelling"/>
                                        <bean parent="Uif-MessageField"
                                              p:messageText="Try a more general search (Any quarter, ENGL 1xx)"/>
                                        <bean parent="Uif-MessageField" p:messageText="Use at least 3 characters"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="course_search_results" parent="Uif-TableCollectionGroup"
          p:layoutManager.numberOfColumns="12">
        <property name="onLoadScript" value="alert('Im running!');"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-course-search-results</value>
            </list>
        </property>
        <property name="render" value="@{getCourseSearchResults().size() gt 0 ? true : false}"/>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.course.dataobject.CourseSearchItem"/>
        <property name="propertyName" value="courseSearchResults"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="layoutManager.id" value="course_search_results_datatable"/>
        <property name="layoutManager.styleClasses">
            <list merge="true">
                <value>myplan-course-search-results-datatable</value>
            </list>
        </property>
        <property name="layoutManager.sequencePropertyName" value="code"/>
        <property name="layoutManager.sequenceFieldPrototype.label" value="Code"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="bindingInfo.bindToForm" value="true"/>
        <!-- Have to turn off emptyTableMessage, so that oLanguage option is not overridden by code -->
        <property name="layoutManager.richTable.emptyTableMessage" value=""/>
        <!-- Have to enable disableTableSort, so that aoColumns option is not overridden by code -->
        <property name="layoutManager.richTable.disableTableSort"
                  value="false"/>
        <property name="layoutManager.richTable.componentOptions">
            <map merge="true">
                <entry key="oLanguage"
                       value="{'sLengthMenu':'Show _MENU_', 'sEmptyTable':'0 results found', 'sZeroRecords':'0 results found', 'sProcessing':'DataTables is currently busy', 'sInfo':'Showing _START_-_END_ of _TOTAL_ results', 'sInfoFiltered':''}"/>
                <entry key="iDisplayLength" value="20"/>
                <entry key="aLengthMenu" value="[ 20, 50, 100 ]"/>
                <entry key="sDom" value="ilrtSp"/>
                <entry key="sPaginationType" value="full_numbers"/>
                <entry key="bRetrieve" value="true"/>
                <entry key="bAutoWidth" value="false"/>
                <entry key="bDeferRender" value="true"/>
                <entry key="bProcessing" value="true"/>
                <entry key="bScrollCollapse" value="true"/>
                <entry key="bStateSave" value="true"/>
                <entry key="bSortClasses" value="false"/>
                <entry key="aaSorting" value="[]"/>
                <entry key="aoColumns"
                       value="[
                            {'bSortable':true, 'bSearchable':false},
                            {'bSortable':true, 'bSearchable':false, 'sWidth':'175px'},
                            {'bSortable':false, 'bSearchable':false},
                            {'bSortable':false, 'bSearchable':false},
                            {'bSortable':false, 'bSearchable':false},
                            {'bSortable':false, 'bSearchable':false},
                            {'sTitle':'facetQuarter', 'bVisible':false},
                            {'sTitle':'facetScheduled', 'bVisible':false},
                            {'sTitle':'facetGenEduReq', 'bVisible':false},
                            {'sTitle':'facetCredits', 'bVisible':false},
                            {'sTitle':'facetLevel', 'bVisible':false},
                            {'sTitle':'facetCurriculum', 'bVisible':false}
                        ]"/>
                <entry key="fnDrawCallback"
                       value="function() {
                            if (Math.ceil((this.fnSettings().fnRecordsDisplay()) / this.fnSettings()._iDisplayLength) > 1)  {
                                jq('.dataTables_paginate span').not('.first, .last').show();
                            } else {
                                jq('.dataTables_paginate span').hide();
                            }
                       }"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:propertyName="code" p:label="Code" p:readOnly="true">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>fl-text-bold</value>
                            <value>myplan-text-nowrap</value>
                        </list>
                    </property>
                </bean>

                <!--  TODO: This is a better way to create this field (once InputField is available).
                <bean parent="InputField" p:propertyName="code" p:label="Code">
                    <property name="fieldInquiry.dataObjectClassName" value="org.kuali.student.lum.course.dto.CourseInfo"/>
                    <property name="fieldInquiry.inquiryParameters">
                        <map>
                            <entry key="courseCode" value="code"/>
                        </map>
                    </property>
                </bean>
                -->
                <bean parent="Uif-Link" p:label="Course Name" p:title="@{#line.courseName}" p:linkLabel="@{#line.courseName}"
                      p:styleClasses="myplan-text-ellipsis" p:style="width: 175px;"
                      p:hrefText="inquiry?methodToCall=start&amp;viewId=CourseDetails-InquiryView&amp;courseId=@{#line.courseId}"/>
                <!--
                <bean parent="InputField" p:propertyName="courseName" p:label="Course Name" p:styleClasses="courseName" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                -->
                <bean parent="Uif-DataField" p:propertyName="credit" p:label="Credit" p:readOnly="true"/>
                <bean parent="Uif-DataField" p:propertyName="scheduledAndOfferedTerms" p:label="Quarter Offered"
                      p:readOnly="true">
                    <property name="styleClasses">
                        <list merge="true">
                            <value>myplan-data-list</value>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:propertyName="genEduReq" p:label="Gen Edu Req" p:readOnly="true"/>
                <bean parent="Uif-ActionImage" p:label="" p:id="@{#line.courseId}" p:styleClasses="fl-text-align-center" p:style="width:55px;">
                    <property name="render" value="@{#line.statusSaved ? false : true}"/>
                    <property name="clientSideJs" value="addSavedCourse('@{#line.courseId}', 'addSavedCourse', 'plan', {viewId:'SavedCoursesListActions-FormView', courseId:'@{#line.courseId}'}, e);"/>
                    <property name="actionImage">
                        <bean parent="Uif-ImageField"
                              p:source="@{#ConfigProperties['ks.myplan.externalizable.images.url']}btnAdd.png"
                              p:altText="Save to Your Courses List" p:title="Save to Your Courses List"/>
                    </property>
                </bean>
                <bean parent="Uif-MessageField" p:messageText="In List" p:id="@{#line.courseId}"
                      p:styleClasses="fl-container-50 fl-text-align-center fl-text-green" p:render="@{#line.statusSaved ? true : false}"/>
                <bean parent="Uif-DataField" p:propertyName="quartersFacetKey" p:label="Quarter Projected"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField" p:propertyName="scheduledFacetKey" p:label="Quarter Scheduled"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField" p:propertyName="genEduReqFacetKey" p:label="Gen Edu Req"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField" p:propertyName="creditsFacetKey" p:label="Credits"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField" p:propertyName="courseLevelFacetKey" p:label="Course Level"
                      p:readOnly="true"/>
                <bean parent="Uif-DataField" p:propertyName="curriculumFacetKey" p:label="Course Prefix"
                      p:readOnly="true"/>
            </list>
        </property>
    </bean>

