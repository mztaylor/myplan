    <bean id="SingleTerm-InquiryView" parent="MyPlanInquiryView">
        <property name="headerText" value="Single Quarter View"/>
        <property name="header.render" value="false"/>
        <property name="viewName" value="SingleTerm-InquiryView"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.plan.dataobject.PlannedTerm"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.plan.service.SingleQuarterInquiryHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="page.header.render" value="false"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="single_planned_courses_detail_page"
                      p:headerText="@{dataObject.qtrYear}">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="onDocumentReadyScript" value="
                                jQuery('body').subscribe('SECTION_ITEM_ADDED', function(data) {
                                        fnToggleSectionAction('button_' + data.atpId + '_' + data.RegistrationCode, data.RegistrationCode, 'added', data);
                                        if (data.ItemsToUpdate &amp;&amp; data.Primary == 'false') {
                                            var items = data.ItemsToUpdate.split(',');
                                            jQuery.each(items, function (index, value) {
                                                fnToggleSectionAction('button_' + data.atpId + '_' + items[index], items[index], 'added', data, true);
                                            });
                                        }
                                    })
                                    .subscribe('SECTION_ITEM_DELETED', function(data) {
                                        if (jQuery('#' + 'button_' + data.atpId + '_' + data.RegistrationCode).data('initial')) {
                                            fnRemoveSectionRow('button_' + data.atpId + '_' + data.RegistrationCode);
                                        } else {
                                            fnToggleSectionAction('button_' + data.atpId + '_' + data.RegistrationCode, data.RegistrationCode, 'deleted', data);
                                            if (data.ItemsToUpdate) {
                                                var items = data.ItemsToUpdate.split(',');
                                                jQuery.each(items, function (index, value) {
                                                    fnToggleSectionAction('button_' + data.atpId + '_' + items[index], items[index], 'deleted', data);
                                                });
                                            }
                                        }
                                    });
                                    "/>
                    <property name="items">
                        <list>
                            <ref bean="single_collection_data"/>
                            <bean parent="myplan_section" p:style="width:300px; margin:0;">
                                <property name="items">
                                    <list>
                                        <ref bean="messages_widget"/>
                                        <ref bean="your_stuff_widget"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer.render" value="false"/>
    </bean>

