                        <bean class="org.kuali.student.myplan.course.util.PublishedTermsListBuilder" />
                    </property>
                </bean>
                <bean parent="ActionField" p:methodToCall="searchForCourses"
                    p:actionLabel="Search" p:jumpToIdAfterSubmit="TOP" p:styleClasses="search-submit kr-button-primary"/>
            </list>
        </property>
