    <!-- Lookup View -->
    <bean id="PlanAuditsSummary-LookupView" parent="MyPlanBaseLookupView">
        <property name="theme">
            <bean parent="MyPlanRetrievedTheme"/>
        </property>
        <property name="onLoadScript" value=""/>
        <property name="headerText" value="Recent Audit Reports"/>
        <property name="page.header.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.audit.dataobject.PlanAuditItem"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.audit.service.PlanAuditsLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="Uif-VerticalBoxGroup"/>
        </property>
        <property name="resultsGroup">
            <bean id="plan_audits_summary" parent="plan_audits_summary_list"/>
        </property>
    </bean>

    <bean id="plan_audits_summary_list" parent="Uif-ListCollectionSection" p:headerText="Recent Plan Audit Reports">
        <property name="collectionObjectClass" value="org.kuali.student.myplan.audit.dataobject.PlanAuditItem"/>
        <property name="propertyName" value="lookupResults"/>
        <property name="validationMessages">
            <null/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderSix"/>
        </property>
        <property name="header.rightGroup">
            <bean parent="Uif-HorizontalBoxGroup">
                <property name="validationMessages">
                    <null/>
                </property>
                <property name="items">
                    <list>
                        <ref bean="recent_audits_help_icon"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-recent-audit</value>
            </list>
        </property>
        <property name="onDocumentReadyScript" value="
            getPendingAudit('plan_audits_summary', 'plan');
            truncateAuditTitle('plan_audits_summary', 'planAudit');

        "/>
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-List">
                <property name="lineGroupPrototype">
                    <bean parent="Uif-CollectionVerticalBoxItem" p:hidden="@{#index gt 2}">
                        <property name="id" value="@{#line.report.auditId}"/>
                        <property name="validationMessages">
                            <null/>
                        </property>
                        <property name="cssClasses">
                            <list merge="true">
                                <value>myplan-audit-item</value>
                                <value>@{#index gt 1 ? 'collapsible':'default'}</value>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="filters">
            <list>
                <bean parent="Uif-ConditionalCollectionFilter" p:expression="#index lt 7"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup">
                    <property name="group.validationMessages">
                        <null/>
                    </property>
                    <property name="group.instructionalMessage">
                        <bean parent="Uif-Message" p:messageText="You are viewing"/>
                    </property>
                    <property name="group.instructionalMessage.cssClasses">
                        <list merge="true">
                            <value>uif-instructionalMessage</value>
                            <value>view-title</value>
                        </list>
                    </property>
                    <property name="group.instructionalMessage.style" value="display:none;"/>
                    <property name="title" value="@{#line.programTitle}"/>
                    <property name="fieldLabel.render" value="false"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-click</value>
                        </list>
                    </property>
                    <property name="onDocumentReadyScript"
                              value="if (@{#line.recentAudit}) jQuery('button#plan_audit_run').data('recentauditid', '@{#line.report.auditId}');"/>
                    <property name="onClickScript"
                              value="window.location.href = 'audit?methodToCall=audit&amp;viewId=DegreeAudit-FormView&amp;planAudit.auditId=@{#line.report.auditId}#plan_audit_block_tab';"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="report.runDate">
                                <property name="fieldLabel.render" value="false"/>
                                <property name="escapeHtmlInPropertyValue" value="false"/>
                                <property name="propertyEditor" ref="plan_audit_timestamp_formatter"/>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>myplan-plan-audit-timestamp</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-HorizontalBoxGroup" p:width="147px">
                                <property name="validationMessages">
                                    <null/>
                                </property>
                                <property name="instructionalText" value="Plan Includes"/>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>myplan-plan-audit-data-group</value>
                                    </list>
                                </property>
                                <property name="footer">
                                    <bean parent="Uif-VerticalBoxGroup">
                                        <property name="validationMessages">
                                            <null/>
                                        </property>
                                        <property name="items">
                                            <list>
                                                <bean parent="Uif-DataField" p:propertyName="programTitle"
                                                      p:width="147px">
                                                    <property name="fieldLabel.render" value="false"/>
                                                    <property name="escapeHtmlInPropertyValue" value="false"/>
                                                    <property name="cssClasses">
                                                        <list merge="true">
                                                            <value>fl-text-bold</value>
                                                            <value>myplan-audit-title</value>
                                                            <value>fl-font-size-90</value>
                                                            <value>myplan-text-ellipsis</value>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="planAuditData" p:label="Courses"
                                              p:propertyName="auditedCoursesCount"/>
                                        <bean parent="planAuditData" p:label="Credits"
                                              p:propertyName="totalAuditedCredit"/>
                                        <bean parent="planAuditData" p:label="Quarters"
                                              p:propertyName="auditedQuarterUpTo"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <bean parent="plan_audit_summary_footer"/>
        </property>
    </bean>

    <bean id="planAuditData" parent="Uif-DataField" p:width="49px">
        <property name="labelPlacement" value="RIGHT"/>
        <property name="fieldLabel.renderColon" value="false"/>
        <property name="fieldLabel.cssClasses">
            <list merge="true">
                <value>myplan-plan-audit-label</value>
            </list>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-plan-audit-data</value>
            </list>
        </property>
        <property name="style" value="margin: 0;"/>
    </bean>

    <bean id="plan_audit_summary_footer" parent="Uif-HorizontalBoxGroup"
          p:style="padding: 6px 10px">
        <property name="render"
                  value="@{lookupResults EQ null OR lookupResults.size() EQ 0 OR lookupResults.size() GT 2}"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup" p:style="padding: 1em 0px;">
                    <property name="render"
                              value="@{lookupResults EQ null OR lookupResults.size() EQ 0}"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-text-align-center</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message"
                                  p:messageText="No recent audits found."/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxGroup" p:style="">
                    <property name="render"
                              value="@{lookupResults NE null AND lookupResults.size() GT 2}"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>fl-text-align-center</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean id="plan_audit_toggle_link" parent="Uif-ActionLink"
                                  p:actionLabel="Show @{lookupResults.size()-2} more Plan audit reports"
                                  p:style="float:left; padding-left: 10px;">
                                <property name="actionScript"
                                          value="toggleComponentContent(this, 'plan_audits_summary', '.collapsible', 'Show @{lookupResults.size()-2} more Plan audit reports', 'Hide @{lookupResults.size()-2} old Plan audit reports');"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


</beans>
