    <bean id="Message-FormView" parent="MyPlanBaseFormView">
        <property name="id" value="Message-FormView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="applyDirtyCheck" value="false"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="message_dialog_response_page" p:headerText="Leave a Message to Jana">
                    <property name="layoutManager">
                        <bean parent="Uif-VerticalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="message_dialog_subject"/>
                            <ref bean="message_dialog_message"/>
                            <ref bean="message_actions"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.comment.form.CommentForm"/>
    </bean>
    <bean id="message_dialog_subject" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField"
                      p:cssClasses="fl-font-size-90">
                    <property name="message">
                        <bean parent="Uif-Message" p:messageText="Subject"/>
                    </property>
                </bean>
                <bean id="subject_textbox" parent="Uif-InputField" p:propertyName="subject"
                      p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="70" p:watermarkText="Maximum characters are 70"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="message_dialog_message" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField"
                      p:cssClasses="fl-font-size-90">
                    <property name="message">
                        <bean parent="Uif-Message" p:messageText="Message"/>
                    </property>
                </bean>
                <bean id="message_textbox" parent="Uif-InputField" p:propertyName="body"
                      p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="10" p:cols="70" p:textExpand="false"
                              p:watermarkText="Maximum characters are 1000"/>

                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="message_actions" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean id="leaveMessageButton" p:id="leaveMessageButton" parent="Uif-PrimaryActionButton"
                      p:actionLabel="Leave a Message" p:methodToCall="addMessage">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-button</value>
                            <value>myplan-button-blue</value>
                            <value>fl-font-size-90</value>
                        </list>
                    </property>
                </bean>
                <bean p:id="cancelMessage" parent="Uif-PrimaryActionButton" p:actionLabel="Cancel">
                    <property name="clientSideJs"
                              value="fnCloseAllPopups();"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-button</value>
                            <value>myplan-button-transparent</value>
                            <value>fl-font-size-90</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--  Messages Summary (Gutter) Lookup -->
    <bean id="MessagesSummary-LookupView" parent="MyPlanBaseLookupView">
        <property name="headerText" value="Messages (@{searchResults.size()})"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="page.header.render" value="false"/>
        <property name="header">
            <bean parent="Uif-HeaderSix"/>
        </property>
        <property name="footer.render" value="false"/>
        <property name="dataObjectClassName" value="org.kuali.student.myplan.comment.dataobject.MessageDataObject"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.myplan.comment.service.MessagesLookupableHelperImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-200</value>
                <value>myplan-section</value>
            </list>
        </property>
        <property name="criteriaFields">
            <list/>
        </property>
        <property name="resultFields">
            <list/>
        </property>

        <!-- Not Displaying any criteria -->
        <property name="criteriaGroup">
            <bean parent="Uif-VerticalBoxGroup"/>
        </property>
        <property name="resultsGroup">
            <bean id="messages_summary" parent="messages_summary_list"/>
        </property>
    </bean>

    <bean id="messages_summary_list" parent="Uif-ListCollectionSection">
        <property name="header">


            <bean id="messsage_header" parent="Uif-ViewHeader">
                <property name="items">

                    <bean parent="Uif-Link" p:linkText="Leave a Message">
                        <property name="href"
                                  value="comment?methodToCall=startCommentForm&amp;viewId=Message-FormView&amp;pageId=message_dialog_response_page"/>
                        <property name="lightBox">
                            <bean parent="Uif-LightBox" />
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-200</value>
                <value>myplan-section</value>
            </list>
        </property>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.comment.dataobject.MessageDataObject"/>
        <property name="propertyName" value="searchResults"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="disclosure.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="filters">
            <list>
                <bean parent="Uif-ConditionalCollectionFilter" p:expression="#index lt 3"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalFieldGroup" p:style="cursor:pointer;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalFieldGroup" p:style="width:175px; margin:0;">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-MessageField" p:messageText="@{#line.subject}" p:style="width:175px;">
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-bold</value>
                                                    <value>myplan-text-ellipsis</value>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-HorizontalFieldGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-MessageField" p:messageText="@{#line.from}" p:label="from"
                                                          p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal fl-text-gray">
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-text-gray</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-MessageField" p:messageText="@{#line.comments.size()}" p:render="@{#line.comments.size() gt 0}">
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-text-bold</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-HorizontalFieldGroup" p:style="width:75px; margin:0;">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="createDate" p:label="Posted" p:labelPlacement="TOP"
                                              p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal fl-font-size-80" p:fieldLabel.style="visibility: hidden;"
                                              p:render="@{#line.comments.size() eq 0}">
                                            <property name="propertyEditor" ref="timestamp_formatter"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-gray</value>
                                                    <value>fl-font-size-90</value>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-DataField" p:propertyName="lastCommentDate" p:label="Last Comment" p:labelPlacement="TOP"
                                              p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal fl-font-size-80"
                                              p:render="@{#line.comments.size() gt 0}">
                                            <property name="propertyEditor" ref="timestamp_formatter"/>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>fl-text-gray</value>
                                                    <value>fl-font-size-90</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                                <!--<property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="#line.comments.size() gt 0">
                                            <property name="replacement">
                                                <list>
                                                    <bean parent="Uif-DataField" p:propertyName="createDate" p:label="Last Comment"
                                                          p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="myplan-text-normal">
                                                        <property name="propertyEditor" ref="timestamp_formatter"/>
                                                        <property name="cssClasses">
                                                            <list merge="true">
                                                                <value>fl-text-gray</value>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>-->
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
