    <bean id="data_list_formatter" class="org.kuali.student.myplan.course.util.CollectionListFormatter">
        <property name="emptyListMessage" value="None"/>
    </bean>

    <bean id="scheduled_terms_formatter" class="edu.uw.kuali.student.myplan.util.ScheduledTermsFormatter"/>

</beans>