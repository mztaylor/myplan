    <bean id="course_details_panel" parent="Group">
        <property name="disclosure.render" value="false"/>
        <property name="errorsField.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="styleClasses" value="fl-container-700"/>
        <property name="items">
            <list>
               <!-- <bean parent="MessageField" p:messageText="@{dataObject.code} @{dataObject.courseTitle} (@{dataObject.credit})"/>-->
                <ref bean="course_details_addtoplan"/>
                <ref bean="course_details_overview"/>
                <!-- <ref bean="course_details_time_schedule"/> -->
            </list>
        </property>
    </bean>

    <bean id="course_details_addtoplan" parent="Group"
          p:layoutManager.orientation="HORIZONTAL">
        <property name="disclosure.render" value="false"/>
        <property name="errorsField.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="ActionField"
                      p:actionLabel="Add this Course"
                      p:clientSideJs="alert('This courseDetails has been added successfully');"/>
            </list>
        </property>
    </bean>

    <bean id="course_details_overview" parent="GroupSectionGridLayout">
        <property name="layoutManager.numberOfColumns" value="2"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="errorsField.render" value="false"/>
        <property name="header.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="DataField" p:propertyName="courseDescription" p:label="Course Description"/>

                <bean parent="FieldGroup" p:label="Course Requisites">
                    <property name="group.layoutManager.orientation" value="VERTICAL"/>
                    <property name="items">
                        <list>
                            <bean parent="DataField" p:propertyName="requisites" p:labelField.render="false" p:escapeHtmlInPropertyValue="false" p:styleClasses="vertical">
                                <property name="formatter" ref="data_list_formatter"/>
                                <property name="render" value="@{dataObject.requisites.size() gt 0 ? 'true' : 'false'}"/>
                            </bean>
                            <bean parent="MessageField" p:messageText="None" p:render="@{dataObject.requisites.size() gt 0 ? 'false' : 'true'}"/>
                            <bean parent="FieldGroup" p:labelField.render="false" p:styleClasses="source">
                                <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                                <property name="items">
                                    <list>
                                        <bean parent="MessageField" p:messageText="(Source:"/>
                                        <bean parent="LinkField" p:linkLabel="Course Catalog" p:hrefText="http://www.washington.edu/students/crscat/"
                                              p:title="Course Catalog" p:target="" p:labelField.render="false"/>
                                        <bean parent="MessageField" p:messageText=")"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="FieldGroup" p:label="Quarters">
                    <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                    <property name="group.errorsField.render" value="false"/>
                    <property name="group.header.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="DataField" p:propertyName="scheduledTerms" p:labelField.render="false" p:styleClasses="icon" >
                                <property name="formatter" ref="scheduled_terms_formatter"/>
                            </bean>
                            <bean parent="FieldGroup" p:labelField.render="false" p:styleClasses="source">
                                <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                                <property name="group.errorsField.render" value="false"/>
                                <property name="group.header.render" value="false"/>
                                <property name="items">
                                    <list>
                                        <bean parent="MessageField" p:messageText="(Source:"/>
                                        <bean parent="LinkField" p:linkLabel="Time Schedule" p:hrefText="http://www.washington.edu/students/timeschd/@{dataObject.campusLocations.contains('Seattle') ? '' : dataObject.campusLocations.get(0).substring(0,1) + '/' } "
                                              p:title="Time Schedule" p:target="" p:labelField.render="false"/>
                                        <bean parent="MessageField" p:messageText=")"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="FieldGroup" p:label="">
                    <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                    <property name="group.errorsField.render" value="false"/>
                    <property name="group.header.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="MessageField" p:messageText="@{dataObject.termsOffered.size() eq 0 ? 'No projected quarter information is available' : 'Projected to be offered in '}"/>
                            <bean parent="DataField" p:propertyName="termsOffered" p:labelField.render="false" p:styleClasses="horizontal">
                                <property name="formatter" ref="data_list_formatter"/>
                            </bean>
                            <bean parent="MessageField" p:messageText="@{dataObject.termsOffered.size() eq 0 ? '' : 'quarters'}"/>
                            <bean parent="FieldGroup" p:labelField.render="false" p:styleClasses="source">
                                <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
                                <property name="group.errorsField.render" value="false"/>
                                <property name="group.header.render" value="false"/>
                                <property name="items">
                                    <list>
                                        <bean parent="MessageField" p:messageText="(Source:"/>
                                        <bean parent="LinkField" p:linkLabel="Course Catalog" p:hrefText="http://www.washington.edu/students/crscat/"
                                              p:title="Course Catalog" p:target="" p:labelField.render="false"/>
                                        <bean parent="MessageField" p:messageText=")"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="DataField" p:propertyName="credit" p:label="Credits"/>

                <bean parent="DataField" p:propertyName="genEdRequirements" p:label="General Edu. Requirements"
                      p:styleClasses="vertical">
                    <property name="formatter" ref="data_list_formatter"/>
                    <property name="render" value="@{dataObject.genEdRequirements.size() gt 0 ? 'true' : 'false'}"/>
                </bean>
                <bean parent="MessageField" p:label="General Edu. Requirements" p:messageText="None" p:labelField.render="true"
                      p:render="@{dataObject.genEdRequirements.size() gt 0 ? 'false' : 'true'}"/>


                <bean parent="DataField" p:propertyName="campusLocations" p:label="Campus" p:styleClasses="horizontal">
                    <property name="formatter" ref="data_list_formatter"/>
                </bean>

            </list>
        </property>
    </bean>

