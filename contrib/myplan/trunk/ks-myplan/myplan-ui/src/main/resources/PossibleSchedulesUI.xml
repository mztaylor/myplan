    <!--  Possible Schedules components -->

    <bean id="PossibleSchedules-FormView" parent="MyPlanFormView">
        <property name="id" value="PossibleSchedules-FormView"/>
        <property name="entryPageId" value="planned_courses_detail_page"/>
        <property name="formClass" value="org.kuali.student.myplan.schedulebuilder.util.ScheduleBuildForm"/>
        <property name="items">
            <list>
                <bean parent="KSAP-Page" p:id="planned_courses_detail_page">
                    <property name="layoutManager">
                        <bean parent="Uif-VerticalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="sb_possible_schedules"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
    </bean>

    <bean id="possible_schedules_nav" parent="Uif-ActionLink">
        <property name="cssClasses" value="schedulePossible__carouselButton"/>
        <property name="actionScript" value="e.preventDefault();"/>
        <property name="onMouseOutScript" value="jQuery(this).blur();"/>
    </bean>

    <bean id="sb_possible_schedules" parent="sb_possible_schedules-parent"/>
    <bean abstract="true" id="sb_possible_schedules-parent" parent="KSAP-VerticalBoxGroup"
          p:id="sb_possible_schedules">
        <property name="onDocumentReadyScript" value="
            jQuery('#sb_possible_schedules').on('REFRESH_POSSIBLE_SCHEDULES', function(event) {
                customRetrieveComponent('sb_possible_schedules','sb_possible_schedules','build','sb',{viewId:'PossibleSchedules-FormView',termId:'@{termId}', learningPlanId:'@{requestedLearningPlanId}', 'buildFilters.showClosed':jQuery('#schedule_build_filters input[value=&quot;closed&quot;]').prop('checked'), 'buildFilters.showRestricted':jQuery('#schedule_build_filters input[value=&quot;restrictions&quot;]').prop('checked'), 'buildFilters.showOverlapped':jQuery('#schedule_build_filters input[value=&quot;registered&quot;]').prop('checked')},null,{centerX:true, centerY:false, message:'&lt;div class=&quot;blockInnerMsg&quot;&gt;Please wait while we are fetching schedule options...&lt;/div&gt;', fadeIn:0, fadeOut:0, overlayCSS:{backgroundColor:'#fff', opacity:0.9, cursor:'wait'}, css:{}, blockMsgClass:'blockSection'});
            })
        "/>
        <property name="forceSessionPersistence" value="true"/>
        <property name="cssClasses" value="removeMargin"/>
        <property name="items">
            <list>
                <ref bean="possible_schedules_details"/>
                <ref bean="possible_schedule_tbd_list"/>
                <ref bean="possible_schedules_calendar"/>
            </list>
        </property>
        <property name="propertyReplacers">
            <list>
                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                      p:condition="possibleScheduleOptions EQ null OR possibleScheduleOptions.size() EQ 0">
                    <property name="replacement">
                        <list>
                            <ref bean="possible_schedules_empty"/>
                            <ref bean="possible_schedules_calendar"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="possible_schedules_empty" parent="KSAP-Message" p:messageText="You have no possible schedules"/>

    <bean id="possible_schedules_details" parent="KSAP-HorizontalBoxGroup">
        <property name="header">
            <bean parent="KSAP-HeaderFive" p:cssClasses="schedulePossible__header"
                  p:headerTagCssClasses="schedulePossible__headerText"/>
        </property>
        <property name="headerText" value="Possible schedules found: @{possibleScheduleOptions.size()}"/>
        <property name="header.rightGroup">
            <bean parent="KSAP-HorizontalBoxGroup" p:cssClasses="schedulePossible__headerGroup--right">
                <property name="items">
                    <list>
                        <bean parent="KSAP-Message" p:messageText="Registered course"/>
                        <bean parent="KSAP-Message" p:messageText="Has enrollment restrictions"/>
                        <bean parent="KSAP-Message" p:messageText="Closed section"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="cssClasses" value="schedulePossible"/>
        <property name="onDocumentReadyScript" value="
            jQuery('.schedulePossible__carousel').jCarouselLite({
                btnNext: '.schedulePossible__carouselButton--next',
                btnPrev: '.schedulePossible__carouselButton--prev',
                scroll: 5,
                visible: 5,
                initCallback: function(a) {
                    firstResult = jQuery(a[0]).find('.schedulePossible__option');
                }
            });

            jQuery('.schedulePossible__carousel').on('SAVED_SCHEDULE_SAVE', function(event, data) {
                jQuery('#save_' + data.uniqueId + '.schedulePossible__save').addClass('schedulePossible__save--saved').attr('data-saved-id', data.id);
            }).on('SAVED_SCHEDULE_REMOVE', function(event, data) {
                jQuery('.schedulePossible__save[data-saved-id=' + data.scheduleIdRemoved + ']').removeClass('schedulePossible__save--saved').removeData('saved-id');
            }).on('SECTION_ITEM_ADDED', function(event, data) {
                KsapSbCalendar.addPlannedActivity(data);
            }).on('SECTION_ITEM_DELETED', function(event, data) {
                KsapSbCalendar.removePlannedActivity(data);
            });
        "/>
        <property name="items">
            <list>
                <bean parent="possible_schedules_nav" p:actionLabel="Prev 5"
                      p:additionalCssClasses="schedulePossible__carouselButton--prev"/>
                <ref bean="possible_courses_schedule_list"/>
                <bean parent="possible_schedules_nav" p:actionLabel="Next 5"
                      p:additionalCssClasses="schedulePossible__carouselButton--next"/>
            </list>
        </property>
    </bean>

    <bean id="possible_courses_schedule_list" parent="Uif-ListCollectionSection">
        <property name="validationMessages">
            <null/>
        </property>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.schedulebuilder.dto.PossibleScheduleOptionInfo"/>
        <property name="propertyName" value="possibleScheduleOptions"/>
        <property name="cssClasses" value="schedulePossible__carousel"/>
        <property name="layoutManager.lineGroupPrototype.id" value="possible-schedule-@{#line.uniqueId}"/>
        <property name="layoutManager.lineGroupPrototype.cssClasses" value="schedulePossible__option"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.validationMessages">
            <null/>
        </property>
        <property name="layoutManager.lineGroupPrototype.onClickScript"
                  value="KsapSbCalendar.togglePossibleSchedule('@{#line.uniqueId}', @{#index + 1}, jQuery(this), @{#line.tbd});"/>
        <property name="layoutManager.lineGroupPrototype.dataAttributes">
            <map>
                <entry key="events" value="@{#line.event}"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="KSAP-SimpleDataField">
                    <property name="propertyName" value="schedule"/>
                    <property name="escapeHtmlInPropertyValue" value="false"/>
                    <property name="propertyEditor">
                        <bean parent="possible_schedule_editor">
                            <property name="tbdSchedule" value="false"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="KSAP-HorizontalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="KSAP-HorizontalFieldGroup">
                                <property name="id" value="save_@{#line.uniqueId}"/>
                                <property name="onClickScript"
                                          value="KsapSbCalendar.toggleSavedSchedule('@{#line.uniqueId}', 'save', e);"/>
                                <property name="hidden" value="true"/>
                                <property name="cssClasses"
                                          value="schedulePossible__save @{#line.id NE null ? 'schedulePossible__save--saved' : ''}"/>
                                <property name="dataAttributes">
                                    <map>
                                        <entry key="saved-id" value="@{#line.id}"/>
                                    </map>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="KSAP-Message" p:messageText="Save"/>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KSAP-Message" p:messageText="@{#index + 1}"
                                  p:cssClasses="schedulePossible__index"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="possible_schedule_tbd_list" parent="KSAP-StackedHorizontalCollectionGroup">
        <property name="hidden" value="true"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.schedulebuilder.dto.PossibleScheduleOptionInfo"/>
        <property name="propertyName" value="possibleScheduleOptions"/>
        <property name="cssClasses" value="schedulePossible__tba"/>
        <property name="header">
            <bean parent="KSAP-HeaderDiv" p:headerText="Meeting Time(s) To Be Arranged"
                  p:cssClasses="schedulePossible__tbaHeader"/>
        </property>
        <property name="layoutManager.lineGroupPrototype.render" value="@{#line.tbd}"/>
        <property name="layoutManager.lineGroupPrototype.id" value="possible-tba-@{#line.uniqueId}"/>
        <property name="layoutManager.lineGroupPrototype.cssClasses" value="schedulePossible__tbaItem"/>
        <property name="layoutManager.lineGroupPrototype.hidden" value="true"/>
        <property name="items">
            <list>
                <bean parent="KSAP-SimpleDataField">
                    <property name="propertyName" value="thisSchedule"/>
                    <property name="escapeHtmlInPropertyValue" value="false"/>
                    <property name="propertyEditor">
                        <bean parent="possible_schedule_editor">
                            <property name="tbdSchedule" value="true"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="KSAP-MessageField" p:messageText="@{#index + 1}" p:cssClasses="schedulePossible__tbaItemIndex"/>
            </list>
        </property>
    </bean>

    <bean id="possible_schedules_calendar" parent="KSAP-Calendar" p:cssClasses="scheduleCalendar">
        <property name="dataAttributes">
            <map>
                <!-- List of classes for each selection, where the length sets the limit of how many items can be selected at once -->
                <entry key="class-selections" value="schedulePossible--orange,schedulePossible--gold,schedulePossible--pink,schedulePossible--blue,schedulePossible--green"/>
                <entry key="planned-activities" value="@{plannedActivities}"/>
            </map>
        </property>
        <property name="templateOptions">
            <map merge="true">
                <entry key="year"
                       value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(term.startDate.time, 'y')}"/>
                <entry key="month"
                       value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(term.startDate.time, 'M') - 1}"/>
                <entry key="date"
                       value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(term.startDate.time, 'd')}"/>
                <entry key="defaultView" value="agendaWeek"/>
                <entry key="header" value="false"/>
                <entry key="contentHeight" value="9999"/>
                <entry key="columnFormat" value="{week: 'dddd'}"/>
                <entry key="hiddenDays" value="[0]"/>
                <entry key="weekends" value="@{weekend}"/>
                <entry key="allDaySlot" value="false"/>
                <entry key="allDayText" value="to be arranged"/>
                <entry key="axisFormat" value="h(:mm)t"/>
                <entry key="minTime" value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(minTime, 'H')}"/>
                <entry key="maxTime" value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(maxTime, 'H')}"/>
                <entry key="timeFormat" value="{agenda: 'h(:mm)t{ - h(:mm)t}'}"/>
                <entry key="slotEventOverlap" value="false"/>
                <entry key="eventClick" value="
                    function(calEvent, jsEvent, view) {
                        if (typeof calEvent.popoverContent !== 'undefined') KsapSbCalendar.openPopover(calEvent, jsEvent);
                    }
                "/>
                <entry key="eventRender" value="
                    function(event, element) {
                        jQuery(element).attr('id', 'possible_schedule_event' + event._id);
                    }
                "/>
                <entry key="lazyFetching" value="false"/>
                <entry key="editable" value="false"/>
                <entry key="selectable" value="false"/>
                <entry key="selectHelper" value="false"/>
                <entry key="complete" value="
                    function() {
                        KsapSbCalendar = jQuery.extend(jQuery(this), KsapSbCalendarActions);
                        var element = (typeof firstResult === 'undefined') ? null : firstResult;
                        KsapSbCalendar.initialize(element);
                    }
                "/>
            </map>
        </property>
    </bean>

</beans>