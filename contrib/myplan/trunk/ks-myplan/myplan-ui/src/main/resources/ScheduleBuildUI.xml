    <bean id="ksapDialogTheme" abstract="true" parent="ksapDialogTheme-parentBean"/>
    <bean id="ksapDialogTheme-parentBean" parent="MyPlanBaseFormView"/>

    <bean id="ScheduleBuild-FormView" parent="ScheduleBuild-FormView-parent"/>
    <bean abstract="true" id="ScheduleBuild-FormView-parent" parent="MyPlanFormView">
        <property name="id" value="ScheduleBuild-FormView"/>
        <property name="entryPageId" value="schedule_build"/>
        <property name="formClass" value="org.kuali.student.myplan.schedulebuilder.util.ScheduleForm"/>
        <property name="additionalCssFiles">
            <list>
                <value>plugins/fullcalendar/fullcalendar.css</value>
                <!--<value>themes/ksap/stylesheets/schedulebuilder/sb.calendar.css</value>-->
                <!--<value>themes/ksap/stylesheets/schedulebuilder/sb.base.css</value>-->
                <!--<value>themes/ksap/stylesheets/schedulebuilder/sb.cart.css</value>-->
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>plugins/carousel/carousel.js</value>
                <value>plugins/fullcalendar/fullcalendar.js</value>
                <value>themes/ksap/scripts/schedulebuilder/schedulebuilder.js</value>
                <!--<value>themes/ksap/scripts/schedulebuilder/cart.js</value>-->
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="schedule_build_page"/>
            </list>
        </property>
        <property name="header.render" value="false"/>
        <property name="footer.render" value="false"/>
    </bean>

    <bean id="schedule_build_page" parent="schedule_build_page-parent"/>
    <bean abstract="true" id="schedule_build_page-parent" parent="KSAP-Page" p:id="schedule_build">
        <property name="layoutManager">
            <bean parent="Uif-VerticalBoxLayout"/>
        </property>
        <property name="items">
            <list>
                <bean id="schedule_build_termId" parent="Uif-InputField" p:propertyName="termId"
                      p:fieldLabel.render="false">
                    <property name="control">
                        <bean parent="Uif-HiddenControl"/>
                    </property>
                </bean>
                <bean id="schedule_build_learningPlanId" parent="Uif-InputField"
                      p:propertyName="requestedLearningPlanId" p:fieldLabel.render="false">
                    <property name="control">
                        <bean parent="Uif-HiddenControl"/>
                    </property>
                </bean>
                <bean parent="KSAP-HorizontalBoxGroup">
                    <property name="items">
                        <list>
                            <ref bean="schedule_build_filters"/>
                            <bean parent="KSAP-ModuleContainer" p:headerText="Saved Schedules" p:width="268px">
                                <property name="items">
                                    <list>
                                        <bean parent="KSAP-SavedScheduleList"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="KSAP-HeaderDiv" p:headerText="@{term.name}" p:cssClasses="scheduleBuilder__termHeader"/>
                <ref bean="schedule_build_possible"/>
                <ref bean="possible_schedules_calendar"/>
            </list>
        </property>
    </bean>

    <bean id="schedule_build_filters" parent="KSAP-HorizontalBoxGroup" p:headerText="@{term.name} Calendar"
          p:style="width: 670px;">
        <property name="header">
            <bean parent="KSAP-HeaderOne"/>
        </property>
        <property name="instructionalMessage">
            <bean parent="KSAP-Message">
                <property name="messageText"
                          value="This calendar shows the meeting days and times for courses in your plan for this quarter. To add or change the courses in your plan, visit your [0] page or [1]."/>
                <property name="inlineComponents">
                    <list>
                        <bean parent="Uif-Link" p:linkText="Plan"
                              p:href="plan?methodToCall=start&amp;viewId=PlannedCourses-FormView"/>
                        <bean parent="Uif-Link" p:linkText="Find Courses"
                              p:href="course?methodToCall=start&amp;viewId=CourseSearch-FormView"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <bean parent="KSAP-VerticalBoxGroup" p:headerText="Include sections that..." p:width="48%">
                    <property name="header">
                        <bean parent="KSAP-HeaderThree"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="KSAP-SimpleInputField" p:propertyName="includeFilters">
                                <property name="control">
                                    <bean parent="Uif-VerticalCheckboxesControl">
                                        <property name="options">
                                            <list>
                                                <bean parent="Uif-KeyLabelPair" p:key="closed"
                                                      p:value="Have closed sections"/>
                                                <bean parent="Uif-KeyLabelPair" p:key="restrictions"
                                                      p:value="Have enrollment restrictions"/>
                                                <bean parent="Uif-KeyLabelPair" p:key="registered"
                                                      p:value="Overlap with my registered courses"/>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean id="sb_filters_submit_button" parent="KSAP-PrimaryActionButton" p:actionLabel="Update">
                                <property name="actionScript" value="jQuery.event.trigger('REFRESH_POSSIBLE_SCHEDULES', {});"/>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="KSAP-VerticalBoxGroup" p:headerText="Exclude sections that meet on..." p:width="48%">
                    <property name="header">
                        <bean parent="KSAP-HeaderThree"/>
                    </property>
                    <property name="layoutManager.additionalCssClasses" value="ksap-sb-reserved-times-container"/>
                    <property name="items">
                        <list>
                            <bean id="sb_reserved_time" parent="Uif-ListCollectionSection" p:id="sb_reserved_time">
                                <property name="validationMessages">
                                    <null/>
                                </property>
                                <property name="collectionObjectClass"
                                          value="org.kuali.student.myplan.schedulebuilder.infc.ReservedTime"/>
                                <property name="propertyName" value="reservedTimes"/>
                                <property name="cssClasses" value="scheduleReserved__item"/>
                                <property name="layoutManager.lineGroupPrototype.id" value="possible-schedule-@{#line.id}"/>
                                <property name="layoutManager.lineGroupPrototype.header.render" value="false"/>
                                <property name="layoutManager.lineGroupPrototype.validationMessages"><null/></property>
                                <property name="layoutManager.lineGroupPrototype.dataAttributes">
                                    <map>
                                        <entry key="selected" value="false"/>
                                    </map>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="KSAP-HorizontalFieldGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="KSAP-Message" p:messageText="@{#line.daysAndTimes}"/>
                                                    <bean parent="Uif-ActionLink" p:actionLabel="Edit" p:actionScript=""/>
                                                    <bean parent="KSAP-Message" p:messageText="|"/>
                                                    <bean parent="Uif-ActionLink" p:actionLabel="Delete"
                                                          p:actionScript="removeReservedScheduleOption('@{#line.id}')"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                    <property name="footer">
                        <bean parent="Uif-FooterBase">
                            <property name="items">
                                <list>

                                    <bean parent="Uif-ActionLink" p:actionLabel="+ Add a day/time">
                                        <property name="actionScript"
                                                  value="ksapSbOpenDialog('sb_create_reserved_time','sb/reserved',{methodToCall:'startDialog',termId:'@{term.id}'}, this, e)"/>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="schedule_build_possible" parent="KSAP-VerticalBoxGroup" p:id="schedule_build_possible">
        <property name="onDocumentReadyScript" value="
            customRetrieveComponent('schedule_build_possible','sb_possible_schedules','build','sb',{viewId:'PossibleSchedules-FormView',termId:'@{termId}', learningPlanId:'@{requestedLearningPlanId}', 'buildFilters.showClosed':jQuery('#schedule_build_filters input[value=&quot;closed&quot;]').prop('checked'), 'buildFilters.showRestricted':jQuery('#schedule_build_filters input[value=&quot;restrictions&quot;]').prop('checked'), 'buildFilters.showOverlapped':jQuery('#schedule_build_filters input[value=&quot;registered&quot;]').prop('checked')},null,{css:{right:'0px',top:'0px',width:'16px',height:'16px',lineHeight:'16px',border:'none'}});
        "/>
    </bean>

    <bean id="possible_schedules_calendar" parent="KSAP-Calendar" p:cssClasses="scheduleCalendar">
        <property name="templateOptions">
            <map merge="true">
                <entry key="year"
                       value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(term.startDate.time, 'y')}"/>
                <entry key="month"
                       value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(term.startDate.time, 'M') - 1}"/>
                <entry key="date"
                       value="@{T(org.kuali.student.myplan.utils.TimeStringMillisConverter).millisToStandardTime(term.startDate.time, 'd')}"/>
                <entry key="defaultView" value="agendaWeek"/>
                <entry key="header" value="false"/>
                <entry key="contentHeight" value="9999"/>
                <entry key="columnFormat" value="{week: 'dddd'}"/>
                <entry key="hiddenDays" value="[0]"/>
                <entry key="weekends" value="false"/>
                <entry key="allDaySlot" value="false"/>
                <entry key="allDayText" value="to be arranged"/>
                <entry key="axisFormat" value="h(:mm)t"/>
                <entry key="minTime" value="8"/>
                <entry key="maxTime" value="17"/>
                <entry key="timeFormat" value="{agenda: 'h(:mm)t{ - h(:mm)t}'}"/>
                <entry key="slotEventOverlap" value="false"/>
                <!--<entry key="eventAfterRender" value="
                    function(event, element, view) {
                        element.data({
                            'course-id': event.courseId,
                            'course-code': event.courseCd,
                            'course-title': event.courseTitle,
                            'section-code': event.sectionCd,
                            'meeting-time': event.meetingTime,
                            'building': event.building,
                            'link-building': event.buildingLink,
                            'term-id': event.termId
                        });
                    }
                "/>-->
                <entry key="lazyFetching" value="false"/>
                <entry key="editable" value="false"/>
                <entry key="selectable" value="false"/>
                <entry key="selectHelper" value="false"/>
                <entry key="complete" value="function() { KsapSbCalendar = jQuery(this); }"/>
            </map>
        </property>
    </bean>

    <bean id="class_meeting_time_formatter"
          class="org.kuali.student.myplan.course.util.ClassMeetingsPropertyEditor">
    </bean>

</beans>
