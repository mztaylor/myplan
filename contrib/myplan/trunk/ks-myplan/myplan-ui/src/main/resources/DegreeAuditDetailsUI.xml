    <bean id="DegreeAuditRaw-FormView" parent="MyPlanFormView">
        <property name="id" value="degreeAuditView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="styleClasses" value="myplan"/>
        <property name="entryPageId" value="degree_audit"/>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="degree_audit" p:title="Degree Audit">
                    <property name="items">
                        <list>

                            <bean id="whoops" parent="Uif-MessageField" p:messageText="@{getAuditText()}"/>
                            <bean id="yippee" parent="Uif-MessageField" p:messageText="@{getAuditHtml()}"/>

                        </list>
                    </property>
                </bean>
            </list>
        </property>



        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.audit.form.DegreeAuditForm"/>
    </bean>


    <bean id="DegreeAudit-FormView" parent="MyPlanFormView">
        <property name="id" value="DegreeAudit-FormView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="entryPageId" value="course_search"/>
        <property name="styleClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderField-Two"/>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>/ks-myplan/scripts/audit.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>/ks-myplan/css/audit.css</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="course_search" p:title="Degree Audit">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="audit_report_section"/>
                            <ref bean="myplan_section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.audit.form.DegreeAuditForm"/>
    </bean>

    <bean id="audit_report_section" parent="Uif-VerticalBoxSubSection" p:errorsField.render="false">
         <property name="styleClasses">
            <list merge="true">
                <value>myplan-container-720</value>
            </list>
        </property>
         <property name="items">
            <list>
                 <bean parent="Uif-VerticalBoxGroup" p:errorsField.render="false">
                    <property name="items">
                        <list>
                            <bean id="txtaudit" parent="Uif-MessageField" p:messageText="@{getAuditHtml()}" p:style="display:block;">                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>





</beans>
