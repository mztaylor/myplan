    <!-- Not used to view audit reports. -->
    <bean id="DegreeAudit-FormView" parent="MyPlanFormView">
        <property name="id" value="DegreeAudit-FormView"/>
        <property name="breadcrumbs.render" value="false"/>
        <property name="entryPageId" value="degree_audit"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>ks-myplan/scripts/audit.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-myplan/css/audit.css</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:headerText="Degree Audit" p:id="degree_audit">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <ref bean="run_degree_audits"/>
                                        <ref bean="audit_report_section"/>
                                    </list>
                                </property>
                                <property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="#{ T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser() }">
                                            <property name="replacement">
                                                <list>
                                                    <ref bean="adviser_actions_message"/>
                                                    <ref bean="audit_report_section"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSection">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="myplan_section">
                                            <property name="header.render" value="false"/>
                                            <property name="items">
                                                <list>
                                                    <ref bean="degree_audits_list"/>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="myplan_section">
                                            <property name="headerText" value="OTHER STUFF[TBD]"/>
                                            <property name="items">
                                                <list>
                                                    <ref bean="watch_list"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.audit.form.DegreeAuditForm"/>
    </bean>

    <bean id="audit_report_section" parent="Uif-VerticalBoxSubSection"
          p:progressiveRenderViaAJAX="true" p:refreshWhenChangedPropertyNames="#form.field44">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-audit-report</value>
                <value>myplan-container-720</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxGroup">
                    <property name="items">
                        <list>
                            <bean id="txtaudit" parent="Uif-Message" p:messageText="@{getAuditHtml()}" p:style="display:block;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="run_degree_audits" parent="Uif-VerticalBoxGroup" p:width="700px">
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-700</value>
                <value>myplan-course-search-panel</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderFive"/>
        </property>
        <property name="items">
            <list>
                <ref bean="select_instruction"/>
                <ref bean="campus_params"/>
                <ref bean="program_params"/>
                <ref bean="audit_type"/>
                <ref bean="audit_instruction"/>
            </list>
        </property>
    </bean>

    <bean id="select_instruction" parent="Uif-Message" p:cssClasses="myplan-text-normal"
          p:style="margin: 10px; width: 600px; display:block;">
        <property name="messageText"
                  value="Select the campus and enter degree program or minor to run audit. It may take 1-5 minutes."/>
    </bean>

    <bean id="campus_params" parent="Uif-HorizontalFieldGroup" p:style="margin: 0px 7px; display:block;">
        <property name="items">
            <list>
                <bean id="radio_campusParam" parent="Uif-InputField" p:propertyName="campusParam" p:width="600px">
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.AuditRunCampusParam"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="program_params" parent="Uif-HorizontalFieldGroup" p:style="margin: 0px 7px; display:block;">
        <property name="items">
            <list>
                <bean id="select_programParam_seattle" parent="Uif-InputField" p:propertyName="programParam" p:width="600px"
                      p:progressiveRenderViaAJAX="true" p:progressiveRender="campusParam eq '0'"
                      p:fieldLabel.cssClasses="myplan-text-normal" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.DegreeAuditSeattlePrograms"/>
                    </property>
                </bean>
                <bean id="select_programParam_bothell" parent="Uif-InputField" p:propertyName="programParam" p:width="600px"
                      p:progressiveRenderViaAJAX="true" p:progressiveRender="campusParam eq '1'"
                      p:fieldLabel.cssClasses="myplan-text-normal" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.DegreeAuditBothellPrograms"/>
                    </property>
                </bean>
                <bean id="select_programParam_tacoma" parent="Uif-InputField" p:propertyName="programParam" p:width="600px"
                      p:progressiveRenderViaAJAX="true" p:progressiveRender="campusParam eq '2'"
                      p:fieldLabel.cssClasses="myplan-text-normal" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.DegreeAuditTacomaPrograms"/>
                    </property>
                </bean>
                <ref bean="degree_audit_run"/>

            </list>
        </property>
    </bean>


    <bean id="degree_audit_run" parent="Uif-AjaxActionButton" p:methodToCall="runAudit"
          p:refreshId="audit_report_section"
          p:actionLabel="Run Degree Audit" p:jumpToIdAfterSubmit="TOP">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-button</value>
                <value>myplan-button-blue</value>
            </list>
        </property>
    </bean>


    <bean id="audit_type" parent="Uif-HorizontalFieldGroup" p:style="margin:0px 7px; display:block;">
        <property name="items">
            <list>
                <bean id="radio_auditType" parent="Uif-InputField" p:propertyName="auditType" p:width="200px" p:defaultValue="kauli.audit.type.default">
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="kauli.audit.type.default" p:value="Text"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="kauli.audit.type.html" p:value="HTML"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="audit_instruction" parent="Uif-Message" p:cssClasses="fl-text-gray fl-font-size-90"
          p:style="margin: 10px; width: 600px; display:block;">
        <property name="messageText"
                  value="&lt;u&gt;Some programs are not included&lt;/u&gt; in the degree program list for audit."/>
    </bean>

</beans>