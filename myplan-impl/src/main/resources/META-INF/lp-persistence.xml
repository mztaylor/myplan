<?xml version="1.0" encoding="UTF-8" ?>
<!-- Use this one for deploying to JBoss -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <!-- JPA test "unit" -->
    <persistence-unit name="LearningPlan" transaction-type="JTA">
        <class>org.kuali.student.r2.common.entity.BaseAttributeEntity</class>

        <class>org.kuali.student.myplan.model.LearningPlanEntity</class>
        <class>org.kuali.student.myplan.model.LearningPlanAttributeEntity</class>
        <class>org.kuali.student.myplan.model.LearningPlanTypeEntity</class>
        <class>org.kuali.student.myplan.model.LearningPlanTypeAttributeEntity</class>

        <class>org.kuali.student.myplan.model.LearningPlanRichTextEntity</class>

        <class>org.kuali.student.myplan.model.PlanItemEntity</class>
        <class>org.kuali.student.myplan.model.PlanItemAttributeEntity</class>
        <class>org.kuali.student.myplan.model.PlanItemTypeEntity</class>
        <class>org.kuali.student.myplan.model.PlanItemTypeAttributeEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

    </persistence-unit>


</persistence>
